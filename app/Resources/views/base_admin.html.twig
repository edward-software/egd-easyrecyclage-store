<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('/assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/assets/vendor/font-awesome/web-fonts-with-css/css/fontawesome-all.min.css') }}">

  {% block stylesheets %}{% endblock %}
    {#<link rel="icon" type="image/png" href="{{ paprec_public_site_url }}/wp-content/themes/bst-master/images/logo/picto_feuille.png">#}
</head>
<body>

<div class="">

    <!-- Static navbar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('paprec_home_dashboard') }}">Easy Recyclage</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                  {% if is_granted('ROLE_ADMIN') %}
                      <li class="dropdown{% if app.request.get('_route')|slice(0, 'paprec_offer'|length) == 'paprec_offer' %} active{% endif %}">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Offer.Bundle-name'|trans }} <span class="caret"></span></a>
                          <ul class="dropdown-menu">
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_customer'|length) == 'paprec_offer_customer' %} active{% endif %}"><a href="{{ path('paprec_offer_customer_index') }}">{{ 'Offer.Customer.Customers'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_offer'|length) == 'paprec_offer_offer' %} active{% endif %}"><a href="{{ path('paprec_offer_offer_index') }}">{{ 'Offer.Offer.Offers'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_call'|length) == 'paprec_offer_call' %} active{% endif %}"><a href="{{ path('paprec_offer_call_index') }}">{{ 'Offer.Offer.Calls'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_followUp'|length) == 'paprec_offer_followUp' %} active{% endif %}"><a href="{{ path('paprec_offer_followUp_index') }}">{{ 'Offer.FollowUp.FollowUps'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_stat'|length) == 'paprec_offer_stat' %} active{% endif %}"><a href="{{ path('paprec_offer_stats_index') }}">{{ 'Offer.Stat.Stats'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_secureDestruction'|length) == 'paprec_offer_secureDestruction' %} active{% endif %}"><a href="{{ path('paprec_offer_secureDestruction_index') }}">{{ 'Offer.SecureDestruction.SecureDestructions'|trans }}</a></li>
                          </ul>
                      </li>
                  {% endif %}

                  {% if is_granted('ROLE_ADMIN') == false and (is_granted('ROLE_PARTNER') or is_granted('ROLE_SELLER')) %}

                      <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_customer'|length) == 'paprec_offer_customer' %} active{% endif %}"><a href="{{ path('paprec_offer_customer_index') }}">{{ 'Offer.Customer.Customers'|trans }}</a></li>
                      <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_offer'|length) == 'paprec_offer_offer' %} active{% endif %}"><a href="{{ path('paprec_offer_offer_index') }}">{{ 'Offer.Offer.Offers'|trans }}</a></li>
                      <li class="{% if app.request.get('_route')|slice(0, 'paprec_offer_followUp'|length) == 'paprec_offer_followUp' %} active{% endif %}"><a href="{{ path('paprec_offer_followUp_index') }}">{{ 'Offer.FollowUp.FollowUps'|trans }}</a></li>

                  {% endif %}


                  {% if is_granted('ROLE_ADMIN') %}
                      <li class="dropdown{% if app.request.get('_route')|slice(0, 'paprec_catalog'|length) == 'paprec_catalog' %} active{% endif %}">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Catalog.Bundle-name'|trans }} <span class="caret"></span></a>
                          <ul class="dropdown-menu">
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_catalog_product'|length) == 'paprec_catalog_product' %} active{% endif %}"><a href="{{ path('paprec_catalog_product_index') }}">{{ 'Catalog.Product.Products'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_catalog_bundle'|length) == 'paprec_catalog_bundle' %} active{% endif %}"><a href="{{ path('paprec_catalog_bundle_index') }}">{{ 'Catalog.Bundle.Bundles'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_catalog_sizeRange'|length) == 'paprec_catalog_sizeRange' %} active{% endif %}"><a href="{{ path('paprec_catalog_sizeRange_index') }}">{{ 'Catalog.SizeRange.SizeRanges'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_catalog_postalCode'|length) == 'paprec_catalog_postalCode' %} active{% endif %}"><a href="{{ path('paprec_catalog_postalCode_index') }}">{{ 'Catalog.PostalCode.PostalCodes'|trans }}</a></li>
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_catalog_service'|length) == 'paprec_catalog_service' %} active{% endif %}"><a href="{{ path('paprec_catalog_service_index') }}">{{ 'Catalog.Service.Services'|trans }}</a></li>
                          </ul>
                      </li>
                  {% endif %}

                  {% if is_granted('ROLE_ADMIN') %}
                      <li class="dropdown{% if app.request.get('_route')|slice(0, 'paprec_user'|length) == 'paprec_user' %} active{% endif %}">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'User.Bundle-name'|trans }} <span class="caret"></span></a>
                          <ul class="dropdown-menu">
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_user_user'|length) == 'paprec_user_user' %} active{% endif %}"><a href="{{ path('paprec_user_user_index') }}">{{ 'User.User.Users'|trans }}</a></li>
                          </ul>
                      </li>
                  {% endif %}

                  {% if is_granted('ROLE_ADMIN') %}
                      <li class="dropdown{% if app.request.get('_route')|slice(0, 'paprec_home_ticket'|length) == 'paprec_home_ticket' %} active{% endif %}">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'Home.Bundle-name'|trans }} <span class="caret"></span></a>
                          <ul class="dropdown-menu">
                              <li class="{% if app.request.get('_route')|slice(0, 'paprec_home_ticket'|length) == 'paprec_home_ticket' %} active{% endif %}"><a href="{{ path('paprec_home_ticket_index') }}">{{ 'Home.Ticket.Tickets'|trans }}</a></li>
                          </ul>
                      </li>
                  {% endif %}

                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li class="pull-right dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ app.user.username }} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('paprec_user_user_editMyProfile') }}"><i class="fa fa-user"></i> {{ 'General.Menu.My-profile'|trans }}</a></li>
                            <li><a href="{{ path('fos_admin_user_security_logout') }}"><i class="fa fa-power-off"></i> {{ 'General.Menu.Logout'|trans }}</a></li>
                        </ul>

                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
      {% block main_content %}{% endblock %}
    </div>

</div>
<script src="{{ asset('/assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/bootbox.js/bootbox.js') }}"></script>
{% block javascripts %}

{% endblock %}
</body>
</html>
