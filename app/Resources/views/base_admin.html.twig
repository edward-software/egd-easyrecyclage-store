<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('/assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('/assets/vendor/components-font-awesome/css/fontawesome-all.min.css') }}">

    {% block stylesheets %}{% endblock %}
    {#<link rel="icon" type="image/png" href="{{ paprec_public_site_url }}/wp-content/themes/bst-master/images/logo/picto_feuille.png">#}
</head>
<body>

<div class="">

    <!-- Static navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('paprec_home_dashboard') }}">Easy Recyclage</a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                aria-controls="navbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav w-100">

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown{% if app.request.get('_route')|slice(0, 'paprec_catalog'|length) == 'paprec_catalog' %} active{% endif %}">
                        <a href="#" class="dropdown-toggle nav-link" id="navbarDropdownCatalog" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">{{ 'Catalog.Bundle-name'|trans }}
                            <span class="caret"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownCatalog">
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_productDI'|length) == 'paprec_catalog_productDI' %} active{% endif %}"
                               href="{{ path('paprec_catalog_productDI_index') }}">{{ 'Catalog.ProductDI.ProductDIs'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_productChantier'|length) == 'paprec_catalog_productChantier' %} active{% endif %}"
                               href="{{ path('paprec_catalog_productChantier_index') }}">{{ 'Catalog.ProductChantier.ProductChantiers'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_productD3E'|length) == 'paprec_catalog_productD3E' %} active{% endif %}"
                               href="{{ path('paprec_catalog_productD3E_index') }}">{{ 'Catalog.ProductD3E.ProductD3Es'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_grilleTarifD3E'|length) == 'paprec_catalog_grilleTarifD3E' %} active{% endif %}"
                               href="{{ path('paprec_catalog_grilleTarifD3E_index') }}">{{ 'Catalog.GrilleTarifD3E.GrilleTarifD3Es'|trans }}</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_category'|length) == 'paprec_catalog_category' %} active{% endif %}"
                                href="{{ path('paprec_catalog_category_index') }}">{{ 'Catalog.Category.Categories'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_argument'|length) == 'paprec_catalog_argument' %} active{% endif %}"
                               href="{{ path('paprec_catalog_argument_index') }}">{{ 'Catalog.Argument.Arguments'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_catalog_postalCode'|length) == 'paprec_catalog_postalCode' %} active{% endif %}"
                               href="{{ path('paprec_catalog_postalCode_index') }}">{{ 'Catalog.PostalCode.PostalCodes'|trans }}</a>
                        </div>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown{% if app.request.get('_route')|slice(0, 'paprec_commercial'|length) == 'paprec_commercial' %} active{% endif %}">
                        <a href="#" class="dropdown-toggle nav-link" id="navbarDropdownCommercial" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">{{ 'Commercial.Bundle-name'|trans }}
                            <span class="caret"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownCommercial">
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_agence'|length) == 'paprec_commercial_agence' %} active{% endif %}"
                               href="{{ path('paprec_commercial_agence_index') }}">{{ 'Commercial.Agency.Agencies'|trans }}</a>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_businessLine'|length) == 'paprec_commercial_businessLine' %} active{% endif %}"
                               href="{{ path('paprec_commercial_businessLine_index') }}">{{ 'Commercial.BusinessLine.BusinessLines'|trans }}</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_commercial_productDIOrder'|length) == 'paprec_commercial_productDIOrder' %} active{% endif %}"
                               href="{{ path('paprec_commercial_productDIOrder_index') }}">{{ 'Commercial.ProductDIOrder.ProductDIOrders'|trans }}</a>
                        </div>
                    </li>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown{% if app.request.get('_route')|slice(0, 'paprec_user'|length) == 'paprec_user' %} active{% endif %}">
                        <a href="#" class="dropdown-toggle nav-link" id="navbarDropdownUser" data-toggle="dropdown"
                           role="button" aria-haspopup="true" aria-expanded="false">{{ 'User.Bundle-name'|trans }}
                            <span class="caret"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownUser">
                            <a class="dropdown-item{% if app.request.get('_route')|slice(0, 'paprec_user_user'|length) == 'paprec_user_user' %} active{% endif %}"
                               href="{{ path('paprec_user_user_index') }}">{{ 'User.User.Users'|trans }}</a>
                        </div>
                    </li>
                {% endif %}

                <li class="nav-item dropdown ml-auto">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        {{ app.user.username }} <span class="caret"></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownAdmin">
                        <a class="dropdown-item" href="{{ path('paprec_user_user_editMyProfile') }}"><i
                                    class="fa fa-user"></i> {{ 'General.Menu.My-profile'|trans }}</a>
                        <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}"><i
                                    class="fa fa-power-off"></i> {{ 'General.Menu.Logout'|trans }}</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        {% block main_content %}{% endblock %}
    </div>

</div>
<script src="{{ asset('/assets/vendor/popper.js/dist/umd/popper.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('/assets/vendor/bootbox.js/bootbox.js') }}"></script>
{% block javascripts %}

{% endblock %}
</body>
</html>
