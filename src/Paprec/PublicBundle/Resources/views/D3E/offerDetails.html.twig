{% extends "@PaprecPublic/Common/Base/base_stepper.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}
{% block whoare %}
{% endblock %}

{% block sidebar %}
    <div class="confirm"></div>
    {# Définition des menus affichés dans la sidebar #}
    {% set besoin = 'active' %}
    {% set coordonnees = 'passed' %}
    {% set offre = 'active' %}
    {{ parent() }}
{% endblock %}

{% block sidebar_info %}
    {{ render(controller('PaprecPublicBundle:Common:getSideBarInfo')) }}
{% endblock %}

{% block main_content_stepper %}
    <input type="hidden" id="divisionType" value="{{ cart.division }}">
    <div class="step">
        <div class="step__sucess">
            <div class="step__sucess__container">
                <div class="step__sucess__container__left">
                </div>
                <div class="step__sucess__container__right">
                    <div class="title">{{ 'Public.Confirm.Thanks'|trans|upper }}</div>
                    <div class="content">{{ 'Public.Confirm.RequestReceivedMail'|trans }}</div>
                </div>
            </div>
        </div>
        <div class="bold">{% if productD3EQuote.civility == 'M' %}{{ 'General.Mr'|trans }}{% else %}{{ 'General.Mme'|trans }}{% endif %} {{ productD3EQuote.firstName }} {{ productD3EQuote.lastName }},
        </div>

        <div class="recaptitle">{{ 'Public.Confirm.RecapOrder'|trans }}</div>
        <div class="greyrecap">
            <div class="title">{{ 'Public.Cart.ForfaitRecyclage'|trans }}</div>
            <div class="info">
                {{ 'Public.Cart.Including2Lines'|trans|nl2br }}
            </div>
            <div class="right">
                {{ 'Public.Cart.From'|trans|upper }}
                <span>{{ productD3EQuote.totalAmount|formatAmount(null, app.request.locale) }}€</span>
            </div>
        </div>

        <div class="greennotice">
            {{ 'Public.Confirm.AgencyContactQuote'|trans }}
        </div>
        {% for productD3EQuoteLine in productD3EQuote.productD3EQuoteLines %}
            <div class="recapproduct">
                <div class="wrapperimage">
                    <img src="{% if productD3EQuoteLine.productD3E.pictos| length > 0 %}{{ asset('/uploads/pictos/' ~ productD3EQuoteLine.productD3E.pictos[0].path) }}{% endif %}"
                         alt="#">
                </div>
                <div class="wrapper-col">
                    <div class="name">{{ productD3EQuoteLine.quantity }}
                        x {{ productD3EQuoteLine.productD3E.name }}</div>
                    <div class="nameof">
                        {{ 'Commercial.ProductD3EQuoteLine.TypeName'|trans }} {{ productD3EQuoteLine.typeName }}</div>
                </div>
                <div class="desc">
                    Prestation {% if productD3EQuote.frequency == 'ponctual' %}ponctuelle {% else %} régulière {% endif %}
                </div>
            </div>

        {% endfor %}
        <br>
        <a href="{{ paprec_public_site_url }}"
           class="backtohome button button--darkblue--outline">{{ ('Public.Cart.BackHome'|trans)|upper }}</a>

        {{ render(controller('PaprecPublicBundle:Common:getCTAsBottom', {
            'label': 'Validate',
            'cartUuid': cart.id,
            'division': cart.division,
            'stepBack': '',
            'nextStep': '',
            'idSubmit': ''
        })) }}
    </>
{% endblock %}

{% block javascripts %}

{% endblock %}
