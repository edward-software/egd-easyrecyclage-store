{% extends "::base_public.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}

{% block main_content %}
    <!-- section -->
    <input type="hidden" id="divisionType" value="{{ cart.division }}">

    <section>
        <div class="wrapper">
            <div class="sidebar">
                <div class="recap active">
                    <div class="recap__step">
                        <span class="recap__stepNumber">01</span>Mon besoin
                    </div>
                    <div id="loadedCartPanel">

                    </div>
                </div>

                <div class="recap">
                    <div class="recap__step">
                        <span class="recap__stepNumber">02</span>Ma confirmation
                    </div>

                </div>

            </div>
            <form id="contactForm" action="#" class="main" method="post" enctype="multipart/form-data">
                <div class="step">
                    <div class="step__left">
                        <div class="step__title">Je suis</div>
                    </div>
                    <div class="step__right step__right--small">
                        {{ form_widget(form.businessName, {'attr': {'class': 'input input--full step--marginfield', 'placeholder': 'Commercial.ContactUs.BusinessName'|trans}}) }}
                        {{ form_errors(form.businessName) }}

                        {{ form_widget(form.civility, {'attr': {'class': 'input--radio'}}) }}
                        {{ form_errors(form.civility) }}

                        <div class="clearfix step--marginfield"></div>

                        {{ form_widget(form.lastName, {'attr': {'class': 'input input--mid step--marginfield', 'placeholder': 'Commercial.ContactUs.LastName'|trans}}) }}
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'input input--mid step--marginfield', 'placeholder': 'Commercial.ContactUs.FirstName'|trans}}) }}
                        {{ form_errors(form.firstName) }}

                        {{ form_widget(form.email, {'attr': {'class': 'input input--full step--marginfield', 'placeholder': 'Commercial.ContactUs.Email'|trans}}) }}
                        {{ form_errors(form.email) }}

                        {{ form_widget(form.phone, {'attr': {'class': 'input input--full step--marginfield', 'placeholder': 'Commercial.ContactUs.PhonePlaceholder'|trans}}) }}
                        {{ form_errors(form.phone) }}

                        {{ form_widget(form.function, {'attr': {'class': 'input input--full step--marginfield', 'placeholder': 'Commercial.ContactUs.FunctionPlaceholder'|trans}}) }}
                        {{ form_errors(form.function) }}

                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="step">
                    <div class="step__left">
                        <div class="step__title">Mon besoin</div>
                    </div>
                    <div class="step__right step__right--small">
                        {{ form_widget(form.need, {'attr': {'class': 'input input--full input--bordered', 'placeholder': 'Commercial.ContactUs.NeedPlaceholder'|trans}}) }}
                        {{ form_errors(form.need) }}
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="step">
                    <div class="notice">Afin de mieux appréhender votre demande, vous pouvez si vous le souhaitez nous
                        fournir des photos (.jpg, .png, .tiff)
                        ou autres fichiers (.pdf, .doc, .xls)
                    </div>
                    <div id="listFiles">

                    </div>
                    {{ form_label(form.attachedFiles, "TÉLÉCHARGER DES PIÈCES JOINTES OU DES PHOTOS", {'label_attr': {'class': 'button button--bordered'}}) }}
                    {{ form_widget(form.attachedFiles, {'attr': {'class': 'input-file'}}) }}

                    <div class="clearfix"></div>

                    <a href="javascript:void(0);" id="contactFormSubmitButton" class="button button--green">
                        ENVOYER VOTRE BESOIN
                    </a>
                </div>
                {{ form_rest(form) }}

            </form>
        </div>


        <div class="clearfix"></div>
    </section>
    <!-- /section -->
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            var division;
            var urlLoadCart;

            loadedPage();
            reloadCart();

            function loadedPage() {
                division = $("#divisionType").val();
                if (division === 'DI') {
                    $('body').addClass('tunnel--green');
                    urlLoadCart = "{{ path('paprec_public_corp_DI_subscription_loadCart', {cartUuid: cart.id}) }}";
                } else if (division === 'CHANTIER') {
                    $('body').addClass('tunnel--orange');
                    urlLoadCart = "{{ path('paprec_public_corp_Chantier_subscription_loadCart', {cartUuid: cart.id}) }}";
                } else {
                    $('body').addClass('tunnel--purple');
                    urlLoadCart = "{{ path('paprec_public_corp_D3E_subscription_loadCart', {cartUuid: cart.id}) }}";
                }
            }


            $('#contactFormSubmitButton').on('click', function () {
                $('#contactForm').submit();
            });

            $('#paprec_commercialbundle_quoteRequestNonCorporate_attachedFiles').on('change', function() {
                html = "";

                for (var i = 0; i < this.files.length; i++) {
                    var lastModified = new Date(this.files[i].lastModified);
                    html += this.files[i].name + " " + new Intl.DateTimeFormat('en-GB').format(lastModified) + " <a href=\"#\">x</a><br>";
                    $('#listFiles').html(html);
                }

            });

            // Rechargement de l'HTML du Cart
            function reloadCart() {
                $.ajax({
                    type: "GET",
                    url: urlLoadCart,
                    contentType: "html",
                    success: function (response) {
                        // On récupère l'HTML du cart dans "Mon besoin" et on l'insère dans loadedCartPanel dans la sidebar
                        var htmlToDisplay = response.trim();
                        $("#loadedCartPanel").html(htmlToDisplay);
                        //on supprime les croix dans le panier
                        $('.buttonDeleteProduct').remove();
                    },
                    error: function (errorThrown) {
                        console.log(errorThrown);
                    }
                });
            }
        });
    </script>

{% endblock %}