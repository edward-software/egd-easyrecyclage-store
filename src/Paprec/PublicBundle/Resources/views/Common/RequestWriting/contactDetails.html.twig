{% extends "@PaprecPublic/Common/Base/base_stepper.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}
{% block whoare %}
{% endblock %}

{% block sidebar %}
    <div class="contact-details-form"></div>
    {# Définition des menus affichés dans la sidebar #}
    {% set besoin = 'active' %}
    {% set coordonnees = 'active' %}
    {% set offre = '' %}
    {{ parent() }}
{% endblock %}

{% block main_content_stepper %}
    <form id="contactDetailsForm" action="" method="post">
        <input type="hidden" id="divisionType" value="{{ cart.division }}">
        <div class="step">
            <div class="step__left">
                <div class="step__title">{{ 'Public.Home.IAm'|trans }}</div>
            </div>
            <div class="step__right step__right--small">
                <div class="form-float-group">
                    {{ form_widget(form.businessName, {'id': 'business_name_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder':'placeholder'}}) }}
                    <label class="form-float-control-placeholder"
                           for="business_name_input">{{ 'Commercial.QuoteRequest.BusinessName'|trans }}</label>
                    {{ form_errors(form.businessName) }}
                </div>
                {{ form_widget(form.businessLine, {'attr': {'class': 'input input--full'}}) }}
                {{ form_errors(form.businessLine) }}

                {{ form_widget(form.civility, {'attr': {'class': 'input--radio'}}) }}
                {{ form_errors(form.civility) }}

                <div class="clearfix step--marginfield"></div>

                <div class="flex space-between">
                    <div class="form-float-group form-float-group--mid">
                        {{ form_widget(form.lastName, {'id': 'last_name_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.LastName'|trans}}) }}
                        <label class="form-float-control-placeholder"
                               for="last_name_input">{{ 'Commercial.QuoteRequest.LastName'|trans }}</label>
                        {{ form_errors(form.lastName) }}
                    </div>

                    <div class="form-float-group form-float-group--mid">
                        {{ form_widget(form.firstName, {'id': 'first_name_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.FirstName'|trans}}) }}
                        <label class="form-float-control-placeholder"
                               for="first_name_input">{{ 'Commercial.QuoteRequest.FirstName'|trans }}</label>
                        {{ form_errors(form.firstName) }}
                    </div>
                </div>

                <div class="form-float-group">
                    {{ form_widget(form.email, {'id': 'email_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.Email'|trans}}) }}
                    <label class="form-float-control-placeholder"
                           for="email_input">{{ 'Commercial.QuoteRequest.Email'|trans }}</label>
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-float-group">
                    {{ form_widget(form.phone, {'id': 'phone_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.PhonePlaceholder'|trans}}) }}
                    <label class="form-float-control-placeholder"
                           for="phone_input">{{ 'Commercial.QuoteRequest.PhonePlaceholder'|trans }}</label>
                    {{ form_errors(form.phone) }}
                </div>

                <div class="form-float-group">
                    {{ form_widget(form.function, {'id': 'function_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.FunctionPlaceholder'|trans}}) }}
                    <label class="form-float-control-placeholder"
                           for="function_input">{{ 'Commercial.QuoteRequest.FunctionPlaceholder'|trans }}</label>
                    {{ form_errors(form.function) }}
                </div>
            </div>
        </div>
        <div class="step step--index">
            <div class="step__left">
                <div class="step__title">
                    {{ 'Public.Home.Addresses'|trans }}
                </div>
            </div>
            <div class="step__right step__right--small">

                <div class="form-float-group">
                    {{ form_widget(form.address, {'id': 'address_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.Address'|trans}}) }}
                    <label class="form-float-control-placeholder"
                           for="address_input">{{ 'Commercial.QuoteRequest.Address'|trans }}</label>
                    {{ form_errors(form.address) }}
                </div>
                <div class="flex space-between">
                    <div class="form-float-group form-float-group--zip">
                        {{ form_widget(form.postalCode, {'id': 'postal_code_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.PostalCode'|trans}}) }}
                        <label class="form-float-control-placeholder"
                               for="postal_code_input">{{ 'Commercial.QuoteRequest.PostalCode'|trans }}</label>
                        {{ form_errors(form.postalCode) }}
                    </div>
                    <div class="form-float-group form-float-group--city">
                        {{ form_widget(form.city, {'id': 'city_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.City'|trans}}) }}
                        <label class="form-float-control-placeholder"
                               for="city_input">{{ 'Commercial.QuoteRequest.City'|trans }}</label>
                        {{ form_errors(form.city) }}
                    </div>
                </div>
                <div class="clearfix"></div>
                <input type="checkbox" id="headofficeAddressCheckbox" class="address-checkbox">
                <label for="headofficeAddressCheckbox"
                       class="address-checkbox-label">{{ 'Commercial.ProductD3EOrder.HeadofficeAddressCheckbox'|trans }}</label>
                <div id="headofficeAddressContainer" class="address-container m-t-15">
                    <div class="form-float-group">
                        {{ form_widget(form.headofficeAddress, {'id': 'address_headoffice_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.HeadOfficeAddress'|trans}}) }}
                        <label class="form-float-control-placeholder"
                               for="address_headoffice_input">{{ 'Commercial.QuoteRequest.HeadOfficeAddress'|trans }}</label>
                        {{ form_errors(form.headofficeAddress) }}
                    </div>
                    <div class="flex space-between">
                        <div class="form-float-group form-float-group--zip">
                            {{ form_widget(form.headofficePostalCode, {'id': 'postal_code_headoffice_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.PostalCode'|trans}}) }}
                            <label class="form-float-control-placeholder"
                                   for="postal_code_headoffice_input">{{ 'Commercial.QuoteRequest.PostalCode'|trans }}</label>
                            {{ form_errors(form.headofficePostalCode) }}
                        </div>
                        <div class="form-float-group form-float-group--city">
                            {{ form_widget(form.headofficeCity, {'id': 'city_headoffice_input', 'attr': {'class': 'input input--full step--marginfield form-float-control', 'placeholder': 'Commercial.QuoteRequest.City'|trans}}) }}
                            <label class="form-float-control-placeholder"
                                   for="city_headoffice_input">{{ 'Commercial.QuoteRequest.City'|trans }}</label>
                            {{ form_errors(form.headofficeCity) }}
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="preferred-contact">
                    {{ 'Commercial.QuoteRequest.PreferredContactLabel'|trans }}
                </div>
                <div class="preferred-contact--choice">
                    {{ form_widget(form.preferredContact, {'attr': {'class': 'input--radio'}}) }}
                    {{ form_errors(form.preferredContact) }}
                </div>

                <div class="clearfix"></div>
            </div>
        </div>
        <div class="step">
            <div class="step__left">&nbsp;</div>
            <div class="step__right">
                <div class="cgv">
                    {{ form_widget(form.terms) }}
                    {{ 'Commercial.QuoteRequest.TermsAccept'|trans }}
                    <a href="{{ paprec_public_site_url}}/cgv" target="_blank">{{ 'Commercial.QuoteRequest.TermsCGV'|trans }}</a>
                    {{ form_errors(form.terms) }}
                </div>
                <div class="cnil">
                    Les informations recueillies sur ce formulaire sont enregistrées dans un fichier informatisé pour
                    permettre de vous adresser des contenus adaptés à vos besoins. Ces données sont conservées pendant 3
                    ans et sont destinées au service marketing. Conformément à la loi
                    « informatique et libertés », vous pouvez exercer votre droit d’accès aux données vous concernant et
                    les faire rectifier en contactant : service-data@paprec.com
                </div>
            </div>
            <div class="clearfix"></div>


            {{ render(controller('PaprecPublicBundle:Common:getCTAsBottom', {
                'label': 'Confirm',
                'cartUuid': cart.id,
                'division': cart.division,
                'stepBack': 'step1',
                'nextStep': 'step3',
                'idSubmit': 'contactDetailsFormSubmitButton'
            })) }}
        </div>
        {{ form_rest(form) }}
    </form>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?libraries=places&key={{ paprec_google_api_key }}">
    </script>
{% endblock %}
