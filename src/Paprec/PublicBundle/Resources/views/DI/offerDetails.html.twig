{% extends "::base_public.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}

{% block main_content %}
    <!-- section -->
    <section>
        <div class="wrapper">
            <div class="sidebar">
                <div class="recap passed">
                    <div class="recap__step">
                        <span class="recap__stepNumber">01</span>Mon besoin
                    </div>
                </div>

                <div class="recap passed">
                    <div class="recap__step">
                        <span class="recap__stepNumber">02</span>Mes coordonnées
                    </div>

                </div>

                <div class="recap active">
                    <div class="recap__step">
                        <span class="recap__stepNumber">03</span>Mon offre
                    </div>

                </div>
                <div class="guide">
                    <div class="guide__title">
                        EASYRECYCLAGE,
                        <br>
                        C’EST SIMPLE ET RAPIDE
                    </div>
                    <div class="guide__step">
                        Sélectionnez
                        <br>
                        vos déchets
                    </div>
                    <div class="guide__step">
                        Validez
                        <br>
                        votre devis
                    </div>
                    <div class="guide__step">
                        Triez vos déchets,
                        <br>
                        nous les collectons
                        <br>
                        et les valorisons
                    </div>
                </div>
            </div>
            <div class="main">
                <div class="step">
                    <div class="step__sucess">
                        <div class="title">MERCI POUR VOTRE CONFIANCE !</div>
                        <div class="content">Votre demande a bien été prise en compte par nos agences et vous a été
                            envoyée par mail.
                        </div>
                    </div>
                    <div class="bold">{% if productDIQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productDIQuote.firstName }} {{ productDIQuote.lastName }}
                        ,
                    </div>

                    <div class="recaptitle">Voici le récapitulatif de votre demande.</div>
                    <div class="greyrecap">
                        <div class="title">Forfait recyclage</div>
                        <div class="info">
                            *comprend la mise à disposition du matériel,
                            <br>
                            la collecte et le traitement en centre de tri
                        </div>
                        <div class="right">
                            À PARTIR DE
                            <span>{{ productDIQuote.totalAmount }}€</span>
                        </div>
                    </div>

                    <div class="greennotice">
                        L’agence en charge de votre demande vous recontactera sous 48h par e-mail ou téléphone afin de
                        valider un devis.
                    </div>
                    {% for productDIQuoteLine in productDIQuote.productDIQuoteLines %}
                        <div class="recapproduct">
                            <div class="wrapperimage">
                                <img src="{% if productDIQuoteLine.productDI.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ productDIQuoteLine.productDI.pilotPictures[0].path) }}{% endif %}"
                                     alt="#">
                            </div>
                            <div class="name">{{ productDIQuoteLine.quantity }}
                                x {{ productDIQuoteLine.productDI.name }} {{ productDIQuoteLine.productDI.capacity }}{{ productDIQuoteLine.productDI.capacityUnit }}</div>
                            <div class="nameof">de {{ productDIQuoteLine.categoryName }}</div>
                            <div class="desc">
                                Prestation {% if productDIQuote.frequency == 'ponctual' %}ponctuelle {% else %} régulière {% endif %}</div>
                        </div>
                    {% endfor %}

                    <a href="#" class="backtohome button button--green">RETOUR À LA PAGE D’ACCUEIL</a>

                    <div class="notice notice--left">
                        Besoin d’une <span>information complémentaire</span> ? Vous souhaitez nous en parler ?
                    </div>

                    <a href="{{ path('paprec_public_home_contactForm', {cartUuid: cart.id}) }}"
                       class="button button--grey">CONTACTEZ-NOUS</a>
                    <a href="{{ path('paprec_public_home_callBackForm', {cartUuid: cart.id }) }}"
                       class="button margint10 button--grey">ÊTRE RAPPELÉ</a>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
    </section>
    <!-- /section -->
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('body').addClass('tunnel--green');
        });
    </script>

{% endblock %}