{% extends "::base_public.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}

{% block main_content %}
    <!-- section -->
    <section>
        <div class="wrapper">
            <div class="sidebar">
                <div class="recap passed">
                    <div class="recap__step">
                        <span class="recap__stepNumber">01</span>Mon besoin
                    </div>
                </div>

                <div class="recap passed">
                    <div class="recap__step">
                        <span class="recap__stepNumber">02</span>Mes coordonnées
                    </div>

                </div>

                <div class="recap active">
                    <div class="recap__step">
                        <span class="recap__stepNumber">03</span>Mon offre
                    </div>

                </div>
            </div>
            <div class="main">
                <div class="step">
                    <div class="step__sucess">
                        <div class="title">MERCI POUR VOTRE CONFIANCE !</div>
                        <div class="content">Votre demande a bien été prise en compte par nos agences et vous a été
                            envoyée par mail.
                        </div>
                    </div>
                    <div class="bold">{% if productDIOrder.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productDIOrder.firstName }} {{ productDIOrder.lastName  }},</div>

                    <div class="recaptitle">Voici le récapitulatif de votre demande.</div>
                    <div class="greyrecap">
                        <div class="title">Forfait recyclage</div>
                        <div class="info">
                            *comprend la mise à disposition du matériel,
                            <br>
                            la collecte et le traitement en centre de tri
                        </div>
                        <div class="right">
                            À PARTIR DE
                            <span>{{ productDIOrder.totalAmount }}€</span>
                        </div>
                    </div>

                    <div class="greennotice">
                        L’agence en charge de votre demande vous recontactera sous 48h par e-mail ou téléphone afin de
                        valider un devis.
                    </div>
                    {% for productDIOrderLine in productDIOrder.productDIOrderLines %}
                    <div class="recapproduct">
                        <div class="wrapperimage">
                            <img src="{% if productDIOrderLine.productDI.pilotPictures %}{{ asset('/uploads/pictos/' ~ productDIOrderLine.productDI.pilotPictures[0].path) }}{% endif %}"
                                 alt="#">
                        </div>
                        <div class="name">{{ productDIOrderLine.quantity }} x {{ productDIOrderLine.productDI.name }} {{ productDIOrderLine.productDI.capacity }}{{ productDIOrderLine.productDI.capacityUnit }}</div>
                        <div class="nameof">de {{ productDIOrderLine.categoryName }}</div>
                        <div class="desc">Prestation ponctuelle</div>
                    </div>
                    {% endfor %}

                    <a href="#" class="backtohome button button--green">RETOUR À LA PAGE D’ACCUEIL</a>

                    <div class="notice notice--left">
                        Besoin d’une <span>information complémentaire</span> ? Vous souhaitez nous en parler ?
                    </div>

                    <a href="#" class="button margint10 button--grey">CONTACTEZ-NOUS</a>
                    <a href="#" class="button margint10 button--grey">ÊTRE RAPPELÉ</a>
                </div>
            </div>

            <div class="clearfix"></div>
        </div>
    </section>
    <!-- /section -->
{% endblock %}

{% block javascripts %}

{% endblock %}