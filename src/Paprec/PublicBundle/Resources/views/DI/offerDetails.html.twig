{% extends "@PaprecPublic/Common/Base/base_stepper.html.twig" %}

{#{% block title %}#}

{#{% endblock %}#}

{#{% block stylesheets %}#}

{#{% endblock %}#}
{% block whoare %}
{% endblock %}

{% block sidebar %}
    {# Définition des menus affichés dans la sidebar #}
    {% set besoin = 'passed' %}
    {% set coordonnees = 'passed' %}
    {% set offre = 'active' %}
    {{ parent() }}
{% endblock %}

{% block sidebar_info %}
    {{ render(controller('PaprecPublicBundle:Common:getSideBarInfo')) }}
{% endblock %}

{% block main_content_stepper %}
    <input type="hidden" id="divisionType" value="{{ cart.division }}">
    <div class="step">
        <div class="step__sucess">
            <div class="title">MERCI POUR VOTRE CONFIANCE !</div>
            <div class="content">Votre demande a bien été prise en compte par nos agences et vous a été
                envoyée par mail.
            </div>
        </div>
        <div class="bold">{% if productDIQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productDIQuote.firstName }} {{ productDIQuote.lastName }},
        </div>

        <div class="recaptitle">Voici le récapitulatif de votre demande.</div>
        <div class="greyrecap">
            <div class="title">Forfait recyclage</div>
            <div class="info">
                *comprend la mise à disposition du matériel,
                <br>
                la collecte et le traitement en centre de tri
            </div>
            <div class="right">
                À PARTIR DE
                <span>{{ productDIQuote.totalAmount|formatAmount(null, app.request.locale) }}€</span>
            </div>
        </div>

        <div class="greennotice">
            L’agence en charge de votre demande vous recontactera sous 48h par e-mail ou téléphone afin de
            valider un devis.
        </div>
        {% for productDIQuoteLine in productDIQuote.productDIQuoteLines %}
            <div class="recapproduct">
                <div class="wrapperimage">
                    <img src="{% if productDIQuoteLine.productDI.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ productDIQuoteLine.productDI.pilotPictures[0].path) }}{% endif %}"
                         alt="#">
                </div>
                <div class="name">{{ productDIQuoteLine.quantity }}
                    x {{ productDIQuoteLine.productDI.name }} {{ productDIQuoteLine.productDI.capacity }}{{ productDIQuoteLine.productDI.capacityUnit }}</div>
                <div class="nameof">de {{ productDIQuoteLine.categoryName }}</div>
                <div class="desc">
                    Prestation {% if productDIQuote.frequency == 'ponctual' %}ponctuelle {% else %} régulière {% endif %}</div>
            </div>
        {% endfor %}

        <a href="{{ paprec_public_site_url }}" class="backtohome button button--green">{{ ('Public.Cart.BackHome'|trans)|upper }}</a>

        {{ render(controller('PaprecPublicBundle:Common:getCTAsBottom', {
            'label': 'Validate',
            'cartUuid': cart.id,
            'division': cart.division,
            'stepBack': '',
            'nextStep': '',
            'idSubmit': ''
        })) }}
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}