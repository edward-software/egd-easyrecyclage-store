                                    }
                                });
                            }
                        }
                    }
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[50, 100, 200, 500], [50, 100, 200, 500]],
                "ajax": "{{ path('paprec_user_user_loadList') }}",
                "columns": [
                    {"data": "id"},
                    {"data": "username"},
                    {"data": "lastName"},
                    {"data": "firstName"},
                    {"data": "email"},
