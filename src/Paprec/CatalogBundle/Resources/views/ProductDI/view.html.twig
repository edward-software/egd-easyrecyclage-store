{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductDI.View'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-select-bs/css/select.bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/css/Catalog/productDI.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductDI.ProductsDI'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-folder"></i> {{ 'Catalog.ProductDI.View'|trans }}
                    <div class="float-right">
                        <a href="{{ path("paprec_catalog_productDI_edit", {id: productDI.id}) }}"
                           class="btn btn-warning"><i
                                    class="fa fa-edit"></i> {{ 'Catalog.ProductDI.Edit'|trans }}</a>
                        <a id="userUserRemoveButton" href="javascript:void(0);" class="btn btn-danger"><i
                                    class="fa fa-trash"></i> {{ 'Catalog.ProductDI.Remove'|trans }}</a>
                    </div>
                </h4>
                <div class="view-tools float-left">
                    <a href="{{ path('paprec_catalog_productDI_index') }}" class="btn btn-default"><i
                                class="fa fa-chevron-left"></i> {{ 'Catalog.ProductDI.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.ProductDI.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-7">

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Name'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.name }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Description'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.description }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Capacity'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.capacity }} {{ productDI.capacityUnit }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Dimensions'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.dimensions }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.UnitPrice'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.unitPrice }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Reference'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.reference }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.AvailablePostalCodes'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ productDI.availablePostalCodes }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Arguments'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {% for argument in productDI.arguments %}
                                            <a href="{{ path('paprec_catalog_argument_view', {id: argument.id}) }}">{{ argument }}</a>
                                        {% endfor %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Categories'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {% for productDICategory in productDI.productDICategories %}
                                            <a href="{{ path('paprec_catalog_category_view', {id: productDICategory.category.id}) }}">{{ productDICategory.category }}</a>
                                        {% endfor %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.IsDisplayed'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {% if productDI.isDisplayed == 1 %}Oui{% else %}Non{% endif %}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="my-4">
                                    <div id="carouselProductDIPictures" class="border carousel slide"
                                         data-ride="carousel">
                                        <div class="carousel-inner">
                                            {% if (productDI.pictures) %}
                                                {% for picture in productDI.pictures %}
                                                    <div class="carousel-item">
                                                        <img class="d-block w-100"
                                                             src="{{ asset('/uploads/pictos/' ~ picture) }}" alt="">
                                                        <div class="carousel-caption d-none d-md-block">
                                                            <h5>Une photo du produit</h5>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            {% endif %}
                                            <div class="carousel-item">
                                                <img class="d-block w-100"
                                                     src="{{ asset('/uploads/pictos/' ~ productDI.picto) }}" alt="">
                                                <div class="carousel-caption d-none d-md-block">
                                                    <h5>Le picto</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselProductDIPictures" role="button"
                                           data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselProductDIPictures" role="button"
                                           data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.ProductDI.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Date-creation'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ productDI.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.ProductDI.Date-update'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ productDI.dateUpdate is empty ? "" : productDI.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#userUserRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_catalog_productDI_remove", {id: productDI.id}) }}";

                        bootbox.confirm("{{ 'Catalog.ProductDI.Confirm-remove'|trans }}", function (result) {
                            if (result === true) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });

                // On met la premi√®re image du carousel comme active
                document.addEventListener('DOMContentLoaded', function () {
                    document.getElementsByClassName('carousel-item')[0].className = 'carousel-item active';
                }, false);
            </script>
        {% endblock %}
