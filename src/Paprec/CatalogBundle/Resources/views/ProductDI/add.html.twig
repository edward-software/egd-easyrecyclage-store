{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductDI.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductDI.Categories'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogProductDIForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-plus"></i> {{ 'Catalog.ProductDI.Add'|trans }}
                        <div class="float-right">
                            <a href="javascript:void(0);" class="btn btn-success catalog-productDI-save-button"><i
                                        class="fa fa-check"></i> {{ 'Catalog.ProductDI.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-danger catalog-productDI-cancel-button"><i
                                        class="fa fa-close"></i> {{ 'Catalog.ProductDI.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.ProductDI.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Description'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <div class="form-label">{{ 'Catalog.ProductDI.Capacity'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.capacity, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.capacity) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="form-label">{{ 'Catalog.ProductDI.CapacityUnit'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.capacityUnit, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.capacityUnit) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Dimensions'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.dimensions, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.dimensions) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.UnitPrice'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.unitPrice, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.unitPrice) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.AvailablePostalCodes'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.availablePostalCodes, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.availablePostalCodes) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Reference'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.reference) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Arguments'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.arguments, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.arguments) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.Categories'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.categories) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductDI.IsDisplayed'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.isDisplayed) }}
                                        {{ form_errors(form.isDisplayed) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-success catalog-productDI-save-button"><i
                                    class="fa fa-check"></i> {{ 'Catalog.ProductDI.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-danger catalog-productDI-cancel-button"><i
                                    class="fa fa-close"></i> {{ 'Catalog.ProductDI.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    </div>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-productDI-save-button').on('click', function () {
                $('#catalogProductDIForm').submit();
            });


            $('.catalog-productDI-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_productDI_index") }}";

                bootbox.confirm("{{ 'Catalog.ProductDI.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}