{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductDI.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductDI.ProductDIs'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogProductDIForm" action="" method="post" enctype="multipart/form-data">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-plus"></i> {{ 'Catalog.ProductDI.AddCategory'|trans }}
                        <div class="float-right">
                            <a href="javascript:void(0);"
                               class="btn btn-success catalog-productDICategoryLine-save-button"><i
                                        class="fa fa-check"></i> {{ 'Catalog.ProductDI.Save'|trans }}</a>
                            <a href="javascript:void(0);"
                               class="btn btn-danger catalog-productDICategoryLine-cancel-button"><i
                                        class="fa fa-close"></i> {{ 'Catalog.ProductDI.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.ProductDI.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">{{ 'Catalog.ProductDICategory.CategoryName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.category, {'attr': {'class': 'form-control select-product'}}) }}
                                        {{ form_errors(form.category) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="form-label">{{ 'Catalog.ProductDICategory.UnitPrice'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.unitPrice, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.unitPrice) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-success catalog-productDICategoryLine-save-button"><i
                                    class="fa fa-check"></i> {{ 'Catalog.ProductDI.Save'|trans }}</a>
                        <a href="javascript:void(0);"
                           class="btn btn-danger catalog-productDICategoryLine-cancel-button"><i
                                    class="fa fa-close"></i> {{ 'Catalog.ProductDI.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>


{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $('.catalog-productDICategoryLine-save-button').on('click', function () {
                $('#catalogProductDIForm').submit();
            });


            $('.catalog-productDICategoryLine-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_productDI_view", { id: productDI.id }) }}";

                bootbox.confirm("{{ 'Catalog.ProductDI.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}