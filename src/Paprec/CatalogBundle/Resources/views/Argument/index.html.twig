{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Argument.Arguments'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-select-bs4/css/select.bootstrap4.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Argument.Arguments'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.Argument.List'|trans }}
                        <div class="float-right">
                            <a href="{{ path('paprec_catalog_argument_add') }}" class="btn btn-sm btn-outline-primary">
                                <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.Argument.Add'|trans }}
                            </a>
                            <a href="{{ path('paprec_catalog_argument_export') }}" class="btn btn-sm btn-primary ">
                                <i class="fa fa-xs fa-file-excel"></i> {{ 'Catalog.Argument.Export'|trans }}
                            </a>
                        </div>
                    </h4>
                </div>

                <div class="card-body">
                    <table id="argumentsListDatatable" class="table table-striped table-bquoteed table-hover"
                           cellpadding="0" cellspacing="0" bquote="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.Argument.Description'|trans }}</th>
                            <th>{{ 'Catalog.Argument.Date-crea'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /BOX -->
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!-- DATA TABLES JS -->
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-select/js/dataTables.select.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-select-bs4/js/select.bootstrap4.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js') }}"></script>

    <script>
        $(function () {

            var argumentList = $('#argumentsListDatatable').DataTable({
                "language": {
                    "lengthMenu": "{{ 'General.Datatable.Records-per-page'|trans }}",
                    "zeroRecords": "{{ 'General.Datatable.Nothing-found'|trans }}",
                    "info": "{{ 'General.Datatable.Showing-page'|trans }}",
                    "infoEmpty": "{{ 'General.Datatable.No-records-available'|trans }}",
                    "search": "{{ 'General.Datatable.Search'|trans }}:",
                    "sProcessing": "{{ 'General.Datatable.Loading'|trans }}",
                    "paginate": {
                        "previous": "{{ 'General.Datatable.Previous'|trans }}",
                        "next": "{{ 'General.Datatable.Next'|trans }}",
                    }
                },
                dom: 'Bflrt' + '<"row"<"col-sm-4"i><"col-sm-8"p>>',
                buttons: [
                    {
                        text: '{{ 'General.Remove'|trans }}',
                        className: 'btn-sm',
                        action: function (e, dt) {
                            if (dt.rows({selected: true}).count() > 0) {
                                var rowIds = [];
                                $.each(dt.rows({selected: true}).data(), function () {
                                    rowIds.push(this.id);
                                });
                                var url = "{{ path("paprec_catalog_argument_removeMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));

                                bootbox.confirm("{{ 'General.Confirm-remove'|trans }}", function (result) {
                                    if (result === true) {
                                        $(location).attr('href', url);
                                    }
                                });
                            }
                        }
                    },
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[5, 10, 20, 50], [5, 10, 20, 50]],
                "ajax": "{{ path('paprec_catalog_argument_loadList') }}",
                "columns": [
                    {"data": "id"},
                    {"data": "description"},
                    {"data": "dateCreation"},
                    {"data": "id", "width": "10%", "bSortable": false}
                ],
                "rowCallback": function (row, data, displayIndex) {
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    viewUrl = "{{ path('paprec_catalog_argument_view', {id: '0000'}) }}".replace('0000', aData['id']);
                    editUrl = "{{ path('paprec_catalog_argument_edit', {id: '0000'}) }}".replace('0000', aData['id']);

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-sm btn-primary btn-sm"><i class="fa fa-xs fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Editer" class="btn btn-sm btn-warning btn-sm"><i class="fa fa-xs fa-edit"></i></a>');

                },
                // On réduit la taille maximale de la deuxieme colonne pour ne pas qu'elle dépasse 50 caractères
                columnDefs: [{
                    targets: 1,
                    render: function (data, type, row) {
                        if (data.length > 50)
                            return data.substr(0, 50) + ' [...]';
                        else
                            return data;
                    }
                }]
            });

            $('#argumentsListDatatable tbody').on('dblclick', 'tr', function (event) {
                url = "{{ path('paprec_catalog_argument_view', {id: '0000'}) }}".replace('0000', $(this).attr('id').replace('row_', ''));
                $(location).attr('href', url);
            });

        });
    </script>
{% endblock %}
