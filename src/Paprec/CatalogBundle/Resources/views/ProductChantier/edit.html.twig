{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductChantier.Edit'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductChantier.ProductChantiers'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogProductChantierForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-pencil-alt"></i> {{ 'Catalog.ProductChantier.Edit'|trans }} #{{ productChantier.id }}

                        <div class="float-right">

                            <a href="javascript:void(0);" class="btn btn-success catalog-ProductChantier-save-button"><i
                                        class="fa fa-check"></i> {{ 'Catalog.ProductChantier.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-danger catalog-ProductChantier-cancel-button"><i
                                        class="fa fa-close"></i> {{ 'Catalog.ProductChantier.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.ProductChantier.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.Description'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <div class="form-label">{{ 'Catalog.ProductChantier.Capacity'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.capacity, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.capacity) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <div class="form-label">{{ 'Catalog.ProductChantier.CapacityUnit'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.capacityUnit, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.capacityUnit) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.Dimensions'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.dimensions, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.dimensions) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.AvailablePostalCodes'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.availablePostalCodes, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.availablePostalCodes) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.Reference'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.reference) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.Arguments'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.arguments, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.arguments) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.IsPayableOnline'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.isPayableOnline, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.isPayableOnline) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductChantier.IsDisplayed'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.isDisplayed, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.isDisplayed) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                </div>
            </div>
            <div class="card-footer">
                <div class="float-right">
                    <a href="javascript:void(0);" class="btn btn-success catalog-ProductChantier-save-button"><i
                                class="fa fa-check"></i> {{ 'Catalog.ProductChantier.Save'|trans }}</a>
                    <a href="javascript:void(0);" class="btn btn-danger catalog-ProductChantier-cancel-button"><i
                                class="fa fa-close"></i> {{ 'Catalog.ProductChantier.Cancel'|trans }}</a>
                </div>
            </div>
        </div>
        </div>
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-ProductChantier-save-button').on('click', function () {

                $('#catalogProductChantierForm').submit();

            });


            $('.catalog-ProductChantier-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_productChantier_view", {id: productChantier.id}) }}";

                bootbox.confirm("{{ 'Catalog.ProductChantier.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}