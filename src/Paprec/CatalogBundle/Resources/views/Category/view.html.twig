{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Category.View'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-select-bs/css/select.bootstrap.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Category.Categories'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-7">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-folder"></i> {{ 'Catalog.Category.View'|trans }}
                    <div class="float-right">
                        <a href="{{ path("paprec_catalog_category_edit", {id: category.id}) }}" class="btn btn-warning"><i
                        class="fa fa-edit"></i> {{ 'Catalog.Category.Edit'|trans }}</a>
                        <a id="userUserRemoveButton" href="javascript:void(0);" class="btn btn-danger"><i
                                    class="fa fa-trash"></i> {{ 'Catalog.Category.Remove'|trans }}</a>
                    </div>
                </h4>
                <div class="view-tools float-left">
                    <a href="{{ path('paprec_catalog_category_index') }}" class="btn btn-default"><i
                                class="fa fa-chevron-left"></i> {{ 'Catalog.Category.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.Category.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Name'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ category.name }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Description'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ category.description }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Enabled'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {% if category.enabled == 1 %}Oui{% else %}Non{% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Division'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ category.division }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Position'|trans }}</label>
                                    <label class="col-form-label col-md-8">
                                        {{ category.position }}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6" style="text-align:center; vertical-align: middle;">
                                <img class="" src="{{ asset('/uploads/pictos/' ~ category.picto) }}" alt="" style="max-width: 50%; height: auto;">
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.Category.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Date-creation'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ category.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Catalog.Category.Date-update'|trans }}</label>
                                <label class="col-form-label col-md-8">
                                    {{ category.dateUpdate is empty ? "" : category.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#userUserRemoveButton').on('click', function () {

                        var url = "{{ path("paprec_catalog_category_remove", {id: category.id}) }}";

                        bootbox.confirm("{{ 'Catalog.Category.Confirm-remove'|trans }}", function (result) {
                            if (result === true) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
