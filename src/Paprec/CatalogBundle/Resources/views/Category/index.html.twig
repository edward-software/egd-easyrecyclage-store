    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-rowrequote/js/dataTables.rowRequote.min.js') }}"></script>

    <script>
        $(document).ready(function () {

            // Création de la datatable affichant les catégories DI
            var categoryDIList = $('#categoriesDIListDatatable').DataTable({
                "language": {
                    "lengthMenu": "{{ 'General.Datatable.Records-per-page'|trans }}",
                    "zeroRecords": "{{ 'General.Datatable.Nothing-found'|trans }}",
                    "info": "{{ 'General.Datatable.Showing-page'|trans }}",
                    "infoEmpty": "{{ 'General.Datatable.No-records-available'|trans }}",
                    "search": "{{ 'General.Datatable.Search'|trans }}:",
                    "sProcessing": "{{ 'General.Datatable.Loading'|trans }}",
                    "paginate": {
                        "previous": "{{ 'General.Datatable.Previous'|trans }}",
                        "next": "{{ 'General.Datatable.Next'|trans }}",
                    }
                },
                dom: 'B<"ml-2">f<"ml-auto">lrti<"ml-auto">p',
                rowRequote: {
                    dataSrc: 'position',
                    update: false
                },
                buttons: [
                    {
                        text: '{{ 'General.Remove'|trans }}',
                        className: 'btn-sm',
                        action: function (e, dt) {
                            if (dt.rows({selected: true}).count() > 0) {
                                var rowIds = [];
                                $.each(dt.rows({selected: true}).data(), function () {
                                    rowIds.push(this.id);
                                });
                                var url = "{{ path("paprec_catalog_category_removeMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));

                                bootbox.confirm("{{ 'General.Confirm-remove'|trans }}", function (result) {
                                    if (result === true) {
                                        $(location).attr('href', url);
                                    }
                                });
                            }
                        }
                    },
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[5, 10, 20, 50], [5, 10, 20, 50]],
                "ajax": "{{ path('paprec_catalog_category_loadList', {typeCategory: 'DI'}) }}",
                "quote": [[4, "asc"]],
                "columns": [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "description"},
                    {"data": "division"},
                    {"data": "position"},
                    {"data": "enabled"},
                    {"data": "dateCreation"},
                    {"data": "id", "width": "10%", "bSortable": false}
                ],
                "rowCallback": function (row, data, displayIndex) {
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    if (aData['enabled'] == true) {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.Yes'|trans }}');
                    }
                    else {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.No'|trans }}');
                    }

                    viewUrl = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', aData['id']);
                    editUrl = "{{ path('paprec_catalog_category_edit', {id: '0000'}) }}".replace('0000', aData['id']);

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-sm btn-primary btn-sm"><i class="fa fa-xs fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Editer" class="btn btn-sm btn-warning btn-sm"><i class="fa fa-xs fa-edit"></i></a>');

                },
                // On réduit la taille maximale de la deuxieme colonne pour ne pas qu'elle dépasse 50 caractères
                columnDefs: [
                    { "width": "120px", "targets": 1 },
                    { "width": "170px", "targets": 2 },
                    {
                    targets: 2,
                    render: function (data, type, row) {
                        if (data && data.length > 50)
                            return data.substr(0, 50) + ' [...]';
                        else
                            return data;
                    }
                }]
            });
            categoryDIList.on('row-requote', function (e, diff, edit) {
                var categories = [];
                //on parcourt toutes les rows et on ajoute l'id des catégories dans l'ordre
                categoryDIList.rows().every( function ( rowIdx, tableLoop, rowLoop ) {
                    categories.push(this.data().id);
                } );
                if (categories.length > 0) {
                    $.ajax({
                        'url': '{{ path('paprec_catalog_category_quoteCategories') }}',
                        'method': 'post',
                        'data': {
                            IdPositionCategories: categories
                        }
                    }).done(function (data) {
                        categoryDIList.ajax.reload();
                    });
                }

            });

            // Création de la datatable affichant les catégories CHANTIER
            var categoryChantierList = $('#categoriesChantierListDatatable').DataTable({
                "language": {
                    "lengthMenu": "{{ 'General.Datatable.Records-per-page'|trans }}",
                    "zeroRecords": "{{ 'General.Datatable.Nothing-found'|trans }}",
                    "info": "{{ 'General.Datatable.Showing-page'|trans }}",
                    "infoEmpty": "{{ 'General.Datatable.No-records-available'|trans }}",
                    "search": "{{ 'General.Datatable.Search'|trans }}:",
                    "sProcessing": "{{ 'General.Datatable.Loading'|trans }}",
                    "paginate": {
                        "previous": "{{ 'General.Datatable.Previous'|trans }}",
                        "next": "{{ 'General.Datatable.Next'|trans }}",
                    }
                },
                dom: 'B<"ml-2">f<"ml-auto">lrti<"ml-auto">p',
                rowRequote: {
                    dataSrc: 'position',
                    update: false
                },
                buttons: [
                    {
                        text: '{{ 'General.Remove'|trans }}',
                        className: 'btn-sm',
                        action: function (e, dt) {
                            if (dt.rows({selected: true}).count() > 0) {
                                var rowIds = [];
                                $.each(dt.rows({selected: true}).data(), function () {
                                    rowIds.push(this.id);
                                });
                                var url = "{{ path("paprec_catalog_category_removeMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));

                                bootbox.confirm("{{ 'General.Confirm-remove'|trans }}", function (result) {
                                    if (result === true) {
                                        $(location).attr('href', url);
                                    }
                                });
                            }
                        }
                    },
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[5, 10, 20, 50], [5, 10, 20, 50]],
                "ajax": "{{ path('paprec_catalog_category_loadList', {typeCategory: 'CHANTIER'}) }}",
                "quote": [[4, "asc"]],
                "columns": [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "description"},
                    {"data": "division"},
                    {"data": "position"},
                    {"data": "enabled"},
                    {"data": "dateCreation"},
                    {"data": "id", "width": "10%", "bSortable": false}
                ],
                "rowCallback": function (row, data, displayIndex) {
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    if (aData['enabled'] == true) {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.Yes'|trans }}');
                    }
                    else {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.No'|trans }}');
                    }

                    viewUrl = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', aData['id']);
                    editUrl = "{{ path('paprec_catalog_category_edit', {id: '0000'}) }}".replace('0000', aData['id']);

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-sm btn-primary btn-sm"><i class="fa fa-xs fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Editer" class="btn btn-sm btn-warning btn-sm"><i class="fa fa-xs fa-edit"></i></a>');

                },
                // On réduit la taille maximale de la deuxieme colonne pour ne pas qu'elle dépasse 50 caractères
                columnDefs: [
                    { "width": "120px", "targets": 1 },
                    { "width": "170px", "targets": 2 },
                    {
                    targets: 2,
                    render: function (data, type, row) {
                        if (data && data.length > 50)
                            return data.substr(0, 50) + ' [...]';
                        else
                            return data;
                    }
                }]
            });
            categoryChantierList.on('row-requote', function (e, diff, edit) {
                var categories = [];
                //on parcourt toutes les rows et on ajoute l'id des catégories dans l'ordre
                categoryChantierList.rows().every( function ( rowIdx, tableLoop, rowLoop ) {
                    categories.push(this.data().id);
                } );
                if (categories.length > 0) {
                    $.ajax({
                        'url': '{{ path('paprec_catalog_category_quoteCategories') }}',
                        'method': 'post',
                        'data': {
                            IdPositionCategories: categories
                        }
                    }).done(function (data) {
                        categoryChantierList.ajax.reload();
                    });
                }

            });


            $('#categoriesChantierListDatatable tbody').on('dblclick', 'tr', function (event) {
                url = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', $(this).attr('id').replace('row_', ''));
                $(location).attr('href', url);
            });
            $('#categoriesDIListDatatable tbody').on('dblclick', 'tr', function (event) {
                url = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', $(this).attr('id').replace('row_', ''));
                $(location).attr('href', url);
            });

        });
    </script>
{% endblock %}
