{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.Category.Categories'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-select-bs4/css/select.bootstrap4.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Catalog.Category.Categories'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">

        {#{% for flashMessage in app.session.flashbag.get('error') %}#}
            {#<div class="alert alert-danger">{{ ('User.User.Error.' ~ flashMessage.msg)|trans }}#}
                {#: {{ flashMessage.var }}</div>#}
        {#{% endfor %}#}

        {#{% for flashMessage in app.session.flashbag.get('success') %}#}
            {#<div class="alert alert-success">{{ ('User.User.Success.' ~ flashMessage.msg)|trans }}#}
                {#: {{ flashMessage.var }}</div>#}
        {#{% endfor %}#}

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-list"></i> {{ 'Catalog.Category.List'|trans }}
                        <div class="float-right">
                            <a href="{{ path('paprec_catalog_catergory_add') }}" class="btn btn-outline-primary">
                                <i class="fa fa-plus"></i> {{ 'Catalog.Category.Add'|trans }}
                            </a>
                            <a href="{{ path('paprec_catalog_category_export') }}" class="btn btn-primary ">
                                <i class="fa fa-file-excel"></i> {{ 'Catalog.Category.Export'|trans }}
                            </a>
                        </div>
                    </h4>
                </div>

                <div class="card-body">
                    <table id="categoriesListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.Category.Name'|trans }}</th>
                            <th>{{ 'Catalog.Category.Description'|trans }}</th>
                            <th>{{ 'Catalog.Category.Division'|trans }}</th>
                            <th>{{ 'Catalog.Category.Position'|trans }}</th>
                            <th>{{ 'Catalog.Category.Enabled'|trans }}</th>
                            <th>{{ 'Catalog.Category.Date-crea'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /BOX -->
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <!-- DATA TABLES JS -->
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-select/js/dataTables.select.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-select-bs4/js/select.bootstrap4.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons/js/dataTables.buttons.min.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('/assets/vendor/datatables.net-buttons-bs4/js/buttons.bootstrap4.min.js') }}"></script>

    <script>
        $(function () {

            var categoryList = $('#categoriesListDatatable').DataTable({
                "language": {
                    "lengthMenu": "{{ 'General.Datatable.Records-per-page'|trans }}",
                    "zeroRecords": "{{ 'General.Datatable.Nothing-found'|trans }}",
                    "info": "{{ 'General.Datatable.Showing-page'|trans }}",
                    "infoEmpty": "{{ 'General.Datatable.No-records-available'|trans }}",
                    "search": "{{ 'General.Datatable.Search'|trans }}:",
                    "sProcessing": "{{ 'General.Datatable.Loading'|trans }}",
                    "paginate": {
                        "previous": "{{ 'General.Datatable.Previous'|trans }}",
                        "next": "{{ 'General.Datatable.Next'|trans }}",
                    }
                },
                dom: 'Bflrtip',
                buttons: [
                    {
                        text: '{{ 'General.Remove'|trans }}',
                        action: function (e, dt) {
                            if (dt.rows({selected: true}).count() > 0) {
                                var rowIds = [];
                                $.each(dt.rows({selected: true}).data(), function () {
                                    rowIds.push(this.id);
                                });
                                var url = "{{ path("paprec_catalog_category_removeMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));

                                bootbox.confirm("{{ 'General.Confirm-remove'|trans }}", function (result) {
                                    if (result === true) {
                                        $(location).attr('href', url);
                                    }
                                });
                            }
                        }
                    },
                    {#{#}
                        {#text: '{{ 'Catalog.Category.Enable'|trans }}',#}
                        {#action: function (e, dt) {#}
                            {#if (dt.rows({selected: true}).count() > 0) {#}
                                {#var rowIds = [];#}
                                {#$.each(dt.rows({selected: true}).data(), function () {#}
                                    {#rowIds.push(this.id);#}
                                {#});#}
                                {#var url = "{{ path("paprec_catalog_category_enableMany", {ids: '0000'}) }}".replace('0000', rowIds.join(','));#}

                                {#bootbox.confirm("{{ 'General.Confirm-enable'|trans }}", function (result) {#}
                                    {#if (result === true) {#}
                                        {#$(location).attr('href', url);#}
                                    {#}#}
                                {#});#}
                            {#}#}
                        {#}#}
                    {#}#}
                ],
                "select": true,
                "processing": true,
                "serverSide": true,
                "lengthMenu": [[50, 100, 200, 500], [50, 100, 200, 500]],
                "ajax": "{{ path('paprec_catalog_category_loadList') }}",
                "columns": [
                    {"data": "id"},
                    {"data": "name"},
                    {"data": "description"},
                    {"data": "division"},
                    {"data": "position"},
                    {"data": "enabled"},
                    {"data": "dateCreation"},
                    {"data": "id", "width": "10%", "bSortable": false}
                ],
                "rowCallback": function (row, data, displayIndex) {
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    if (aData['enabled'] == true) {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.Yes'|trans }}');
                    }
                    else {
                        $(nRow).find(':first-child').next().next().next().next().next().html('{{ 'General.No'|trans }}');
                    }

                    viewUrl = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', aData['id']);
                    editUrl = "{{ path('paprec_catalog_category_edit', {id: '0000'}) }}".replace('0000', aData['id']);

                    $(nRow).find(':last-child').html('<a href="' + viewUrl + '" data-toggle="tooltip" title="Voir" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a> <a href="' + editUrl + '" data-toggle="tooltip" title="Editer" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>');

                },
                columnDefs: [ {
                    targets: 2,
                    render: function ( data, type, row ) {
                        if (data.length > 50)
                            return data.substr( 0, 50 ) + ' [...]';
                        else
                            return data;
                    }
                } ]
            });

            $('#user-list-datatable tbody').on('dblclick', 'tr', function (event) {
                url = "{{ path('paprec_catalog_category_view', {id: '0000'}) }}".replace('0000', $(this).attr('id').replace('row_', ''));
                $(location).attr('href', url);
            });

        });
    </script>
{% endblock %}
