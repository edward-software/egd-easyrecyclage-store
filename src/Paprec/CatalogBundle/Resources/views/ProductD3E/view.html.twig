{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductD3E.View'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/css/Catalog/product.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductD3E.ProductD3Es'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-folder"></i> {{ 'Catalog.ProductD3E.View'|trans }}
                    <div class="float-right">
                        <a href="{{ path("paprec_catalog_productD3E_edit", {id: productD3E.id}) }}"
                           class="btn btn-sm btn-warning"><i
                                    class="fa fa-edit"></i> {{ 'Catalog.ProductD3E.Edit'|trans }}</a>
                        <a id="catalogProductRemoveButton" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                    class="fa fa-trash"></i> {{ 'Catalog.ProductD3E.Remove'|trans }}</a>
                    </div>
                </h4>
                <div class="view-tools float-left">
                    <a href="{{ path('paprec_catalog_productD3E_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-chevron-left"></i> {{ 'Catalog.ProductD3E.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Catalog.ProductD3E.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            {#
                                Affichage des informations du produit
                            #}
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.Name'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.name }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.Description'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.description }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.CoefHandling'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.coefHandling }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.CoefSerialNumberStmt'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.coefSerialNumberStmt }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.CoefDestruction'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.coefDestruction }}
                                    </label>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.Reference'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.reference }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.AvailablePostalCodes'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.availablePostalCodes }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.Position'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {{ productD3E.position }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.GrilleTarifD3E'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {% if productD3E.grilleTarifD3E and productD3E.grilleTarifD3E.deleted is null %}
                                            <a href="{{ path('paprec_catalog_grilleTarifD3E_view', {id: productD3E.grilleTarifD3E.id}) }}">{{ productD3E.grilleTarifD3E }}</a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.IsPayableOnline'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {% if productD3E.isPayableOnline == 1 %}Oui{% else %}Non{% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-5 col-form-label">{{ 'Catalog.ProductD3E.IsDisplayed'|trans }}</label>
                                    <label class="col-form-label col-md-7">
                                        {% if productD3E.isDisplayed == 1 %}Oui{% else %}Non{% endif %}
                                    </label>
                                </div>
                            </div>
                            {#
                                Affichage des photos
                            #}
                            <div class="col-md-6">
                                {#
                                    Affichage des photos Pictos
                                #}
                                <div class="col-md-12 no-gutters">
                                    <div class="card">
                                        <div class="card-header">
                                            {{ 'Catalog.ProductD3E.Picto'|trans }}
                                        </div>
                                        <div class="card-body">
                                            <div class="card-group">
                                                {% if (productD3E.pictos) %}
                                                    {% for picto in productD3E.pictos %}
                                                        <div class="card card-sec">
                                                            <div class="card-header">
                                                                <div class="float-left"> {{ 'Catalog.ProductD3E.Picto'|trans }}</div>
                                                                <div class="dropdown float-right">
                                                                    <button class="p-0 btn btn-light dropdown-toggle btn-sm"
                                                                            type="button" id="{{ picto.id }}"
                                                                            data-toggle="dropdown" aria-haspopup="true"
                                                                            aria-expanded="false">
                                                                        <i class="fa fa-cog"></i>
                                                                    </button>
                                                                    <div class="dropdown-menu"
                                                                         aria-labelledby="{{ picto.id }}">
                                                                        <button id="pictureEditButton"
                                                                                class="dropdown-item"
                                                                                type="button"
                                                                                data-target="#editPictureModal"
                                                                                data-toggle="modal"
                                                                                data-type="Picto"
                                                                                data-id="{{ picto.id }}">
                                                                            <i class="fa fa-pencil-alt"></i> {{ 'General.Edit'|trans }}
                                                                        </button>
                                                                        <button onclick="removePicture(this)"
                                                                                class="dropdown-item"
                                                                                type="button">
                                                                            <i class="fa fa-trash"></i> {{ 'General.Remove'|trans }}
                                                                        </button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <img class="card-img-top"
                                                                 src="{{ asset('/uploads/pictos/' ~ picto.path) }}"
                                                                 alt="{{ 'Catalog.ProductD3E.Picto'|trans }}">
                                                        </div>
                                                    {% endfor %}
                                                {% endif %}
                                                {#
                                                    Card d'ajout d'une nouvelle photo Picto
                                                #}
                                                <div class="card card-sec bg-transparent border-0">
                                                    <button class="card-img-top btn btn-light h-100 bg-transparent border-0"
                                                            data-target="#uploadPictureModal" data-toggle="modal"
                                                            data-type="Picto"
                                                            id="openModalUploadPicture">
                                                        <i class="fa fa-plus-circle fa-2x"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {#
                            Modal d'affichage des formulaires
                        #}
                        <div class="modal fade" id="uploadPictureModal" tabindex="-1" role="dialog"
                             aria-labelledby="Upload Picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formAddPicture" name="formAddPicture"
                                            {% set params = {id: productD3E.id, type: 'Picture' } %}
                                          action="{{ path("paprec_catalog_productD3E_addPicture", params) }}"
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="uploadPictureModalTitle">
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="form-label">{{ 'Catalog.Picture.Path'|trans }}</div>
                                                <div class="form-content">
                                                    {{ form_widget(formAddPicture.path, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formAddPicture.path) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'|trans }}
                                            </button>
                                            {{ form_widget(formAddPicture.save, { 'label': 'General.Save'|trans }) }}

                                        </div>
                                        {{ form_rest(formAddPicture) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="modal fade" id="editPictureModal" tabindex="-1" role="dialog"
                             aria-labelledby="Edit Picture" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <form id="formEditPicture" name="formEditPicture"
                                          action=""
                                          method="post" enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editPictureModalTitle">
                                                {{ 'Catalog.ProductD3E.EditPicto'|trans }}
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <div class="form-label">{{ 'Catalog.Picture.Path'|trans }}</div>
                                                <div class="form-content">
                                                    {{ form_widget(formEditPicture.path, {'attr': {'class': 'form-control'}}) }}
                                                    {{ form_errors(formEditPicture.path) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-secondary"
                                                    data-dismiss="modal">
                                                {{ 'General.Cancel'|trans }}
                                            </button>
                                            {{ form_widget(formEditPicture.save, { 'label': 'General.Save'|trans }) }}

                                        </div>
                                        {{ form_rest(formEditPicture) }}
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {#
                Card d'affichage des infos système
            #}
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">{{ 'Catalog.ProductD3E.System-informations'|trans }}</h5>
                    </div>
                    <div class="card-body">

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'Catalog.ProductD3E.Date-creation'|trans }}</label>
                            <label class="col-form-label col-md-8">
                                {{ productD3E.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4 col-form-label">{{ 'Catalog.ProductD3E.Date-update'|trans }}</label>
                            <label class="col-form-label col-md-8">
                                {{ productD3E.dateUpdate is empty ? "" : productD3E.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

    {% block javascripts %}
        <script type="text/javascript"
                src="{{ asset('/assets/vendor/datatables.net-select-bs4/js/select.bootstrap4.min.js') }}"></script>
        <script>
            $(function () {

                $('#catalogProductRemoveButton').on('click', function () {

                    var url = "{{ path("paprec_catalog_productD3E_remove", {id: productD3E.id}) }}";

                    bootbox.confirm("{{ 'Catalog.ProductD3E.Confirm-remove'|trans }}", function (result) {
                        if (result === true) {
                            $(location).attr('href', url);
                        }
                    });

                });

                $('.catalog-ProductD3E-save-button').on('click', function () {

                    $('#catalogProductD3EForm').submit();

                });
            });

            // Au chargement de la modal d'ajout d'une photo
            // On met à jour le titre de la modal d'ajout de photo en fonction du type que l'on ajoute
            // On modifie aussi l'url d'action pour passer en paramètre le type de photo à ajouter
            $('#uploadPictureModal').on('show.bs.modal', function (e) {
                var type = $(e.relatedTarget).data('type');
                var actionUrl = "{{ path("paprec_catalog_productD3E_addPicture", {id: productD3E.id, type: 'typeTmp'}) }}";
                actionUrl = actionUrl.replace('typeTmp', type);
                document.formAddPicture.action = actionUrl;
                switch (type) {
                    case 'Picto':
                        type = "{{ 'Catalog.ProductD3E.Picto'|trans }}";
                        break;
                        {#case 'PilotPicture':#}
                        {#type = "{{ 'Catalog.ProductD3E.PilotPicture'|trans }}";#}
                        {#break;#}
                    default:
                        type = "{{ 'Catalog.ProductD3E.Pictures'|trans }}";
                        break;
                }
                var title = document.getElementById('uploadPictureModalTitle');
                title.innerText = type;
            });

            // Au chargement de la modal d'édition d'une photo
            // On modifie l'URL d'action du formulaire pour passer en paramètre l'ID de la photo modifiée
            $('#editPictureModal').on('show.bs.modal', function (e) {
                var pictureID = $(e.relatedTarget).data('id');
                var type = $(e.relatedTarget).data('type');
                var actionUrl = "{{ path("paprec_catalog_productD3E_editPicture", {id: productD3E.id, pictureID: 'pictureTmp'}) }}";
                actionUrl = actionUrl.replace('pictureTmp', pictureID);
                document.formEditPicture.action = actionUrl;
                var title = document.getElementById('editPictureModalTitle');
                title.innerText = type;
            });


            function removePicture(obj) {
                var picId = "";
                picId = obj.parentNode.previousElementSibling.id;
                bootbox.confirm("{{ 'Catalog.ProductD3E.Confirm-remove-picture'|trans }}", function (result) {
                    if (result === true) {
                        var url = "{{ path("paprec_catalog_productD3E_removePicture", {id: productD3E.id, pictureID: 'pictureTmp'}) }}";
                        url = url.replace('pictureTmp', picId);
                        $(location).attr('href', url);
                    }
                });
            };
        </script>

    {% endblock %}
