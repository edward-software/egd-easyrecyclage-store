{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.ProductD3E.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.ProductD3E.Categories'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogProductD3EForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-plus"></i> {{ 'Catalog.ProductD3E.Add'|trans }}
                        <div class="float-right">
                            <a href="javascript:void(0);" class="btn btn-success catalog-productD3E-save-button"><i
                                        class="fa fa-check"></i> {{ 'Catalog.ProductD3E.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-danger catalog-productD3E-cancel-button"><i
                                        class="fa fa-close"></i> {{ 'Catalog.ProductD3E.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.ProductD3E.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.Name'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.Description'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.Reference'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.reference) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.CoefHandling'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.coefHandling, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.coefHandling) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.CoefSerialNumberStmt'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.coefSerialNumberStmt, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.coefSerialNumberStmt) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.CoefDestruction'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.coefDestruction, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.coefDestruction) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.AvailablePostalCodes'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.availablePostalCodes, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.availablePostalCodes) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.Position'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.position) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.GrilleTarifD3E'|trans }}</div>
                                    <div class="form-content">
                                        {{ form_widget(form.grilleTarifD3E, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.grilleTarifD3E) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.IsPayableOnline'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.isPayableOnline) }}
                                        {{ form_errors(form.isPayableOnline) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label">{{ 'Catalog.ProductD3E.IsDisplayed'|trans }}</div>
                                    <div class="form-content checkbox-list">
                                        {{ form_widget(form.isDisplayed) }}
                                        {{ form_errors(form.isDisplayed) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-success catalog-productD3E-save-button"><i
                                    class="fa fa-check"></i> {{ 'Catalog.ProductD3E.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-danger catalog-productD3E-cancel-button"><i
                                    class="fa fa-close"></i> {{ 'Catalog.ProductD3E.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    </div>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-productD3E-save-button').on('click', function () {
                $('#catalogProductD3EForm').submit();
            });


            $('.catalog-productD3E-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_productD3E_index") }}";

                bootbox.confirm("{{ 'Catalog.ProductD3E.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}