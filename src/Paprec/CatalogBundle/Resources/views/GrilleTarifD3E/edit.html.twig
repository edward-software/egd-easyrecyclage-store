{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.GrilleTarifD3E.Edit'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Catalog.GrilleTarifD3E.GrilleTarifD3Es'|trans }}
{% endblock %}

{% block main_content %}

    <form id="catalogGrilleTarifD3EForm" action="" method="post" enctype="multipart/form-data">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-pencil-alt"></i> {{ 'Catalog.GrilleTarifD3E.Edit'|trans }} #{{ grilleTarifD3E.id }}

                        <div class="float-right">

                            <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-grilleTarifD3E-save-button"><i
                                        class="fa fa-xs fa-check"></i> {{ 'Catalog.GrilleTarifD3E.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-grilleTarifD3E-cancel-button"><i
                                        class="fa fa-xs fa-close"></i> {{ 'Catalog.GrilleTarifD3E.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-7">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Catalog.GrilleTarifD3E.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="form-label">{{ 'Catalog.GrilleTarifD3E.Name'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                    </div>
                </div>
                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success catalog-grilleTarifD3E-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Catalog.GrilleTarifD3E.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger catalog-grilleTarifD3E-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Catalog.GrilleTarifD3E.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </form>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.catalog-grilleTarifD3E-save-button').on('click', function () {

                $('#catalogGrilleTarifD3EForm').submit();

            });


            $('.catalog-grilleTarifD3E-cancel-button').on('click', function () {

                var url = "{{ path("paprec_catalog_grilleTarifD3E_view", {id: grilleTarifD3E.id}) }}";

                bootbox.confirm("{{ 'Catalog.GrilleTarifD3E.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
{% endblock %}