                                   cellpadding="0" cellspacing="0" border="0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{ 'Catalog.GrilleTarifLigneD3E.PostalCodes'|trans }}</th>
                                    <th>{{ 'Catalog.GrilleTarifLigneD3E.Agency'|trans }}</th>
                                    <th>{{ 'Catalog.GrilleTarifLigneD3E.MinQuantity'|trans }}</th>
                                    <th>{{ 'Catalog.GrilleTarifLigneD3E.MaxQuantity'|trans }}</th>
                                    <th>{{ 'Catalog.GrilleTarifLigneD3E.Price'|trans }}</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for grilleTarifLigneD3E in grilleTarifD3E.grilleTarifLigneD3Es %}
                                    <tr>
                                        <td>{{ grilleTarifLigneD3E.id }}</td>
                                        <td>{{ grilleTarifLigneD3E.postalCodes }}</td>
                                        <td>{{ grilleTarifLigneD3E.agency }}</td>
                                        <td>{{ grilleTarifLigneD3E.minQuantity }}</td>
                                        <td>{{ grilleTarifLigneD3E.maxQuantity }}</td>
                                        <td>{{ grilleTarifLigneD3E.price }}</td>
                                        <td class="text-center">
                                            <a href="javascript:void(0);"
                                               class="btn btn-sm btn-warning btn-sm mx-1"
                                               data-target="#editLigneModal"
                                               data-toggle="modal"
                                               data-id="{{ grilleTarifLigneD3E.id }}">
                                                <i class="fa fa-xs fa-edit"></i>
                                            </a>
                                            <a href="javascript:void(0);"
                                               class="btn btn-sm btn-danger btn-sm catalogGrilleTarifLigneD3EEditButton"
                                               onclick="removeLigne({{ grilleTarifLigneD3E.id }})">
                                                <i class="fa fa-xs fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="modal fade" id="editLigneModal" tabindex="-1" role="dialog"
                                 aria-labelledby="Edit Ligne" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <form id="formEditGrilleTarifLigneD3E" name="formEditGrilleTarifLigneD3E"
                                              action=""
                                              method="post" enctype="multipart/form-data">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="editLigneModalTitle">
                                                    {{ 'Catalog.GrilleTarifLigneD3E.Edit'|trans }}
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <div class="form-label">{{ 'Catalog.GrilleTarifLigneD3E.PostalCodes'|trans }}</div>
