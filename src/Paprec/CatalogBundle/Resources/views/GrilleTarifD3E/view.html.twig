                                                        {{ form_widget(editLigneForm.agency, {'attr': {'class': 'form-control'}}) }}
                                                        {{ form_errors(editLigneForm.agency) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-label">{{ 'Catalog.GrilleTarifLigneD3E.MinQuantity'|trans }}</div>
                                                    <div class="form-content">
                                                        {{ form_widget(editLigneForm.minQuantity, {'attr': {'class': 'form-control'}}) }}
                                                        {{ form_errors(editLigneForm.minQuantity) }}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-label">{{ 'Catalog.GrilleTarifLigneD3E.MaxQuantity'|trans }}</div>
                                                    <div class="form-content">
