                                    </div>
                                    <div class="form-group col-md-2">
                                        <div class="form-label">{{ 'Catalog.GrilleTarifLigneD3E.Price'|trans }}</div>
                                        <div class="form-content">
                                            {{ form_widget(addLigneForm.price, {'attr': {'class': 'form-control'}}) }}
                                            {{ form_errors(addLigneForm.price) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-2 align-bottom">
                                        <div class="form-label" style="visibility: hidden;">.</div>
                                        <div class="form-content align-bottom">
                                            <a href="javascript:void(0);"
                                               class="btn btn-sm btn-success catalogGrilleTarifD3ESaveButton"><i
                                                        class="fa fa-xs fa-check"></i> {{ 'Catalog.GrilleTarifD3E.Save'|trans }}
                                            </a>
                                        </div>
                                    </div>
                                </div>
