{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.ProductDIOrder.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.ProductDIOrder.ProductDIOrders'|trans }}
{% endblock %}

{% block main_content %}

    <form id="commercialProductDIOrderForm" action="" method="post" enctype="multipart/form-data">
        <input type="hidden" id="submitFormInput" name="submitForm" value="">
        <input type="hidden" id="selectedProductInput" name="selectedProductId" value="">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.ProductDIOrder.AddLine'|trans }}
                        <div class="float-right">
                            <a href="javascript:void(0);" class="btn btn-sm btn-success commercial-productDIOrderLine-save-button"><i
                                        class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductDIOrder.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-sm btn-danger commercial-productDIOrderLine-cancel-button"><i
                                        class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductDIOrder.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Commercial.ProductDIOrder.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductDIOrderLine.ProductName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.productDI, {'attr': {'class': 'form-control select-product'}}) }}
                                        {{ form_errors(form.productDI) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductDIOrderLine.CategoryName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.category) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductDIOrderLine.Quantity'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.quantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success commercial-productDIOrderLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductDIOrder.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger commercial-productDIOrderLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductDIOrder.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    </div>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $('#selectedProductInput').val($('.select-product').val());


            $('.commercial-productDIOrderLine-save-button').on('click', function () {
                $('#submitFormInput').val(1);
                $('#commercialProductDIOrderForm').submit();
            });


            $('.commercial-productDIOrderLine-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_productDIOrder_view", { id: productDIOrder.id }) }}";

                bootbox.confirm("{{ 'Commercial.ProductDIOrder.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });

            $('.select-product').on('change', function(){
                $('#selectedProductInput').val($(this).val());
                $('#submitFormInput').val('');
                if($(this).val() != '')
                {
                    $('#commercialProductDIOrderForm').submit();
                }
            });

        });
    </script>
{% endblock %}