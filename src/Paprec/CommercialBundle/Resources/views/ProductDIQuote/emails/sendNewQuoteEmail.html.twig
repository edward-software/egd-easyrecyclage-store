{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="100px" height="100px" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO
     </a>
 {% endblock %}

{% block title_header %}
    Un nouveau devis vient d'être établi
{% endblock %}

{% block subtitle_header %}
    Devis Ponctuel - Mes déchets d'entreprise - N° {{ productDIQuote.id }}
{% endblock %}

{% block main_content %}
    <tr>
        Détail du devis N° {{ productDIQuote.id }} - {{ productDIQuote.dateCreation|date('d/m/Y H:i:s') }}
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductDIQuote.BusinessName'|trans }}
        </td>
        <td class="value">
            {{ productDIQuote.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            Contact
        </td>
        <td class="value">
            {% if productDIQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productDIQuote.lastName }} {{ productDIQuote.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductDIQuote.Function'|trans }}
        </td>
        <td class="value">
            {{ productDIQuote.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductDIQuote.Address'|trans }}
        </td>
        <td class="value">
            {{ productDIQuote.address }}<br>
            {{ productDIQuote.postalCode }} {{ productDIQuote.city }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductDIQuote.Email'|trans }}
        </td>
        <td class="value">
            {{ productDIQuote.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductDIQuote.Phone'|trans }}
        </td>
        <td class="value">
            {{ productDIQuote.phone }}
        </td>
    </tr>
    {% for productDIQuoteLine in productDIQuote.productDIQuoteLines %}
        <tr>
            <td class="picto">
                {% if productDIQuoteLine.productDI.pictures|length > 0 %}
                    <img src="{% if productDIQuoteLine.productDI.pilotPictures|length > 0 %}{{ absolute_url('/uploads/pictos/' ~ productDIQuoteLine.productDI.pilotPictures[0].path) }}{% endif %}"
                         alt="#">
                {% endif %}
            </td>
            <td class="product">
                {{ productDIQuoteLine.quantity }} x {{ productDIQuoteLine.productName }}<br>
                de {{ productDIQuoteLine.categoryName }}
            </td>
            <td class="price">
                à partir de {{ productDIQuoteLine.totalAmount|formatAmount('EUR', app.request.locale) }}
            </td>
        </tr>
    {% endfor %}
    <tr>
        <td></td>
        <td>
            TOTAL
        </td>
        <td>
            à partir de {{ productDIQuote.totalAmount|formatAmount('EUR', app.request.locale) }}
        </td>
    </tr>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h et d'importer le devis actualisé
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_productDIQuote_view", {id: productDIQuote.id})) }}">
                Lien pour voir le devis et y importer le nouveau devis
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

