{% extends "@PaprecCommercial/Common/PDF/base_pdf_quote_products.html.twig" %}

{% block stylesheet %}
    {{ parent() }}
    <style type="text/css">

        .product-table-item {
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            justify-content: space-between;
            border-bottom: 2px solid #d3d3d3;
            padding: 15px 0;
        }

        .product-table-item h3 {
            margin: 0;
        }

        .product-table-item-img {
            width: 217px;
            padding: 10px;
            align-self: center;
        }

        .product-table-item-img img {
            width: 100%;
        }

        .product-table-item-desc {
            width: 382px;
            padding: 10px;
        }

        .product-table-item-price {
            width: 211px;
            padding: 10px;
            align-self: center;
            text-align: left;
            margin-top: 20px
        }

        .product-table-total {
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            justify-content: space-between;
            padding: 30px 0;
        }

    </style>
{% endblock %}

{% block address %}
    {{ productDIQuote.address }}
    <br> {{ productDIQuote.postalCode }} {{ productDIQuote.city }}
{% endblock %}

{% block products %}

    {% for productDIQuoteLine in productDIQuote.productDIQuoteLines %}
        <div class="product-table-item" style="page-break-inside: avoid;">
            <div class="product-table-item-img">
                <img src="{% if productDIQuoteLine.productDI.pilotPictures|length > 0 %}{{ absolute_url('/uploads/pictos/' ~ productDIQuoteLine.productDI.pilotPictures[0].path) }}{% endif %}"
                     alt="#">
            </div>
            <div class="product-table-item-desc">
                <h3 class="bg-blue" style="display: inline">
                    {{ productDIQuoteLine.quantity }} {{ productDIQuoteLine.productName }} {{ productDIQuoteLine.productDI.capacity }}
                    {% autoescape false %}{{ productDIQuoteLine.productDI.capacityUnit }} {% endautoescape %} - DECHETS {{ productDIQuoteLine.categoryName }}
                </h3>
                <p style="margin-top: 20px; ; padding-right: 10px; text-align: justify">
                    {% autoescape false %}{{ productDIQuoteLine.productDI.description }} {% endautoescape %}
                </p>
            </div>
            <div class="product-table-item-price">
                <p>{{ productDIQuoteLine.totalAmount|formatAmount('EUR', app.request.locale) }} HT / mois / {{ productDIQuoteLine.productName|lower }}</p>
            </div>
        </div>
    {% endfor %}

    <div class="product-table-total">
        <div style="width: 217px ;"></div>
        <div style="width: 382px ;">
            <h3 class="bg-blue" style="margin: 0 0 0 10px;">TOTAL</h3>
        </div>
        <div style="width: 211px;">{{ productDIQuote.totalAmount|formatAmount('EUR', app.request.locale) }} HT</div>
    </div>
{% endblock %}
