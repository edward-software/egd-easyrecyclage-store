    .product-table-container {
        margin-top: 50px;
    }

    .product-table-item {
        display: flex;
        justify-content: space-between;
        border-bottom: 2px solid #d3d3d3;
        padding: 15px 0;
    }

    .product-table-item h3 {
        margin: 0;
    }

    .product-table-item-img {
        width: 160px;
        padding: 10px;
        align-self: center;
    }

    .product-table-item-img img {
        width: 100%;
    }

    .product-table-item-desc {
        width: 280px;
        padding: 10px;
    }

    .product-table-item-price {
        width: 156px;
        padding: 10px 0 10px;
        align-self: center;
        text-align: left;
    }

    .product-table-total {
        display: flex;
        justify-content: space-between;
        padding: 30px 0;
    }

