{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="75px" height="75px" style="font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO COURRIER
     </a>
 {% endblock %}

{% block title_header %}
    Vous avez une nouvelle demande
{% endblock %}

{% block subtitle_header %}
    Formulaire Prestation régulière {{ quoteRequest.division }} - N° {{ quoteRequest.id|formatId(6) }}
{% endblock %}

{% block main_content %}
    <table class="newRequestEmailTable" border="0" cellpadding="0" cellspacing="0" width="80%"
           style="margin-left: 10%; margin-bottom: 15px; margin-top: 20px;">
        <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6);">
            <td>
                Détail de la demande N° {{ quoteRequest.id|formatId(6) }}
                - {{ quoteRequest.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.BusinessName'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.businessName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.Civility'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {% if quoteRequest.civility == 'M' %}Monsieur{% else %}Madame{% endif %}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.LastName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.lastName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.FirstName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.firstName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.Function'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.function }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.PostalCode'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.postalCode }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.Email'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.email }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.Phone'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.phone }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.Need'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequest.need }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequest.AttachedFiles'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {% if quoteRequest.attachedFiles %}
                        <a href="{{ absolute_url(path('paprec_commercial_quoteRequest_downloadAttachedFiles', {id: quoteRequest.id})) }}">Pièces
                            jointes</a>
                    {% endif %}
                </div>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h.
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_quoteRequest_edit", {id: quoteRequest.id})) }}">
                <button class="btn btn-green" style="margin: 5px 0px 15px 0px;">
                    Mettre à jour le statut
                </button>
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

