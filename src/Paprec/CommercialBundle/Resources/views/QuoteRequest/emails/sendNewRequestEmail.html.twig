{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="100px" height="100px" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO COURRIER
     </a>
 {% endblock %}

{% block title_header %}
    Vous avez une nouvelle demande
{% endblock %}

{% block subtitle_header %}
    Formulaire Prestation régulière {{ quoteRequest.division }} - N° {{ quoteRequest.id }}
{% endblock %}

{% block main_content %}
    <tr>
        Détail de la demande N° {{ quoteRequest.id }}
        - {{ quoteRequest.dateCreation|date('d/m/Y H:i:s') }}
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.BusinessName'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.Civility'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.civility }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.LastName'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.lastName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.FirstName'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.Function'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.Email'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.Phone'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.phone }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.Need'|trans }}
        </td>
        <td class="value">
            {{ quoteRequest.need }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.QuoteRequest.AttachedFiles'|trans }}
        </td>
        <td class="value">
            {% if quoteRequest.attachedFiles %}
                <a href="{{ absolute_url(path('paprec_commercial_quoteRequest_downloadAttachedFiles', {id: quoteRequest.id})) }}">Pièces
                    jointes</a>
            {% endif %}
        </td>
    </tr>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h.
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_quoteRequest_edit", {id: quoteRequest.id})) }}">
                Mettre à jour le statut
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

