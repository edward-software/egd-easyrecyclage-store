{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.QuoteRequest.View'|trans }}
{% endblock %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs4/css/dataTables.bootstrap4.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Commercial.QuoteRequest.Users'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- FLASH MESSAGE -->
        <div class="view-box">

            {% for flashMessage in app.session.flashbag.get('errors') %}
                <div class="alert alert-danger">{{ ('Commercial.QuoteRequest.Error.' ~ flashMessage)|trans }}</div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">{{ ('Commercial.QuoteRequest.Success.' ~ flashMessage)|trans }}</div>
            {% endfor %}
        </div>
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-xs fa-quoteRequest"></i> {{ 'Commercial.QuoteRequest.View'|trans }}
                    <div class="float-right">
                        <a href="{{ path("paprec_commercial_quoteRequest_edit", {id: quoteRequest.id}) }}"
                           class="btn btn-sm btn-warning"><i
                                    class="fa fa-xs fa-edit"></i> {{ 'Commercial.QuoteRequest.Edit'|trans }}</a>
                        <a id="commmecialQuoteRequestRemoveButton_" href="javascript:void(0);" class="btn btn-sm btn-danger"><i
                                    class="fa fa-xs fa-trash"></i> {{ 'Commercial.QuoteRequest.Remove'|trans }}</a>
                    </div>
                </h4>
                <div class="view-tools float-left">
                    <a href="{{ path('paprec_commercial_quoteRequest_index') }}" class="btn btn-sm btn-default"><i
                                class="fa fa-xs fa-chevron-left"></i> {{ 'Commercial.QuoteRequest.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequest.Informations-FO'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.BusinessName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.businessName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Civility'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.civility }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.LastName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.lastName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.FirstName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.firstName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Email'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.email }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Phone'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.phone }}
                                    </label>
                                </div>
                                {#<div class="form-group row">#}
                                    {#<label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.AttachedFiles'|trans }}</label>#}
                                    {#<label class="col-form-label">#}
                                        {#{{ quoteRequest.att }}#}
                                    {#</label>#}
                                {#</div>#}
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Function'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.function }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.QuoteStatus'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.quoteStatus }}
                                    </label>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Division'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.division }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.PostalCode'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.postalCode }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.AttachedFiles'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequest.attachedFiles %}
                                            <a href="{{ path('paprec_commercial_quoteRequest_downloadAttachedFiles', {id: quoteRequest.id}) }}"><i class="fa fa-download"></i></a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Need'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.need }}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequest.Informations-BO'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.GeneratedTurnover'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.generatedTurnover }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Agency'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequest.agency %}
                                            <a href="{{ path('paprec_commercial_agence_view', {id: quoteRequest.agency.id}) }}">{{ quoteRequest.agency }}</a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Summary'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.summary }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Frequency'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequest.frequency == 'regular' %}Régulier {% else %}Ponctuel{% endif %}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Tonnage'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.tonnage }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.KookaburaNumber'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ quoteRequest.kookaburaNumber }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.UserInCharge'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequest.userInCharge %}
                                            <a href="{{ path('paprec_user_user_view', {id: quoteRequest.userInCharge.id}) }}">{{ quoteRequest.userInCharge }}</a>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.AssociatedQuote'|trans }}</label>
                                    <label class="col-form-label">
                                        {% if quoteRequest.associatedQuote %}
                                        <a href="{{ path('paprec_commercial_quoteRequest_downloadAssociatedQuote', {id: quoteRequest.id}) }}"><i class="fa fa-download"></i></a>
                                        {% endif %}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.QuoteRequest.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Date-creation'|trans }}</label>
                                <label class="col-form-label">
                                    {{ quoteRequest.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.QuoteRequest.Date-update'|trans }}</label>
                                <label class="col-form-label">
                                    {{ quoteRequest.dateUpdate is empty ? "" : quoteRequest.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}
            <!-- DATA TABLES JS -->
            <script type="text/javascript"
                    src="{{ asset('/assets/vendor/datatables.net/js/jquery.dataTables.min.js') }}"></script>
            <script type="text/javascript"
                    src="{{ asset('/assets/vendor/datatables.net-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
            <script>
                $(function () {

                    $('#commmecialQuoteRequestRemoveButton_').on('click', function () {

                        var url = "{{ path("paprec_commercial_quoteRequest_remove", {id: quoteRequest.id}) }}";

                        bootbox.confirm("{{ 'Commercial.QuoteRequest.Confirm-remove'|trans }}", function (result) {
                            if (result === true) {
                                $(location).attr('href', url);
                            }
                        });

                    });
                });
            </script>
        {% endblock %}
