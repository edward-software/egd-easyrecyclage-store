{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

{% block css_rules %}
    <style>
    </style>
{% endblock %}

{# {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/new_mail.svg')) }}" width="75px" height="75px"
          border="0" class="picto-header">
 {% endblock %}#}

{% block title_header %}
    <tr>
        <td style="padding: 60px 80px;" class="mobile-padding">
            <table class="new-demand" style="border-collapse:separate !important;" border="0" cellpadding="0"
                   cellspacing="0" width="100%" align="center">
                <tr>
                    <td align="center" style="padding-bottom: 10px;">
                        <div>
                            <img alt="New" src="{{ absolute_url(asset('build/static/pastil-new.png')) }}">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em;">Vous avez une</td>
                </tr>
                <tr>
                    <td style="font-size: 2em;">nouvelle demande</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em; padding-top: 25px;">
                        Formulaire Contactez-nous - N° {{ contactUs.id|formatId(6) }}
                    </td>
                </tr>
            </table>
    </tr>

{% endblock %}

{#{% block subtitle_header %}
    Formulaire Contactez-nous - N° {{ contactUs.id|formatId(6) }}
{% endblock %}#}

{% block main_content %}

    <table class="newRequestEmailTable responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%"
           align="center"
           style="max-width: 600px; color: {{ gray1 }};font-size: 1em;">
        <tr style="border-bottom: 1px solid {{ gray2 }};">
            <td style="margin-bottom: 10px; font-size: 1.2em;font-weight: bold;display: block;">
                Détail de la demande N° {{ contactUs.id|formatId(6) }}
                - {{ contactUs.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.BusinessName'|trans }} : &nbsp;
            </td>
            <td class="value">
                {{ contactUs.businessName }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.Civility'|trans }} : &nbsp;
            </td>
            <td class="value">
                {% if contactUs.civility == 'M' %}Monsieur{% else %}Madame{% endif %}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.LastName'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.lastName }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.FirstName'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.firstName }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.Function'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.function }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.PostalCode'|trans }} :
            </td>
            <td class="value">
                {#{{ contactUs.postalCode }}#}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.Email'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.email }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.Phone'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.phone }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.Need'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ contactUs.need }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ContactUs.AttachedFiles'|trans }} :&nbsp;
            </td>
            <td class="value">
                {% if contactUs.attachedFiles %}
                    <a href="{{ absolute_url(path('paprec_commercial_contactUs_downloadAttachedFiles', {id: contactUs.id})) }}">Pièces
                        jointes</a>
                {% endif %}
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer %}

    <table class="footer-demand" border="0" cellpadding="0" cellspacing="0" width="100%" align="center"
           style="max-width: 600px;">
        <tr>
            <td style="padding-top: 25px;" align="center">
                Merci de répondre à cette demande sous 48h
            </td>
        </tr>
        <tr>
            <td style="padding-bottom: 25px;" align="center">
                <a href="{{ absolute_url(path("paprec_commercial_contactUs_edit", {id: contactUs.id})) }}">
                    <button class="btn btn-green" style="margin-top: 15px;">
                        Mettre à jour le statut
                    </button>
                </a>
            </td>
        </tr>
    </table>

{% endblock %}

