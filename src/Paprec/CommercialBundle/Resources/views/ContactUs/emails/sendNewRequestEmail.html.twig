{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/new_mail.png')) }}" width="75px" height="75px"
          style="font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">
 {% endblock %}

{% block title_header %}
    Vous avez une nouvelle demande
{% endblock %}

{% block subtitle_header %}
    Formulaire Contactez-nous - N° {{ contactUs.id|formatId(6) }}
{% endblock %}

{% block main_content %}

    <table class="newRequestEmailTable" border="0" cellpadding="0" cellspacing="0" width="80%"
           style="margin-left: 10%; margin-bottom: 15px; margin-top: 20px;">
        <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6);">
            <td>
                Détail de la demande N° {{ contactUs.id|formatId(6) }}
                - {{ contactUs.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.BusinessName'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {{ contactUs.businessName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.Civility'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {% if contactUs.civility == 'M' %}Monsieur{% else %}Madame{% endif %}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.LastName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.lastName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.FirstName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.firstName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.Function'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.function }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.Email'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.email }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.Phone'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.phone }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.Need'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ contactUs.need }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.ContactUs.AttachedFiles'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {% if contactUs.attachedFiles %}
                        <a href="{{ absolute_url(path('paprec_commercial_contactUs_downloadAttachedFiles', {id: contactUs.id})) }}">Pièces
                            jointes</a>
                    {% endif %}
                </div>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h.
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_contactUs_edit", {id: contactUs.id})) }}">
                <button class="btn btn-green" style="margin: 5px 0px 15px 0px;">
                    Mettre à jour le statut
                </button>
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

