{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="100px" height="100px" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO
     </a>
 {% endblock %}

{% block title_header %}
    Nouveau devis pour déchets D3E
{% endblock %}

{% block subtitle_header %}
    Devis D3E - N° {{ productD3EQuote.id }}
{% endblock %}

{% block main_content %}
    <tr>
        Détail de la demande N° {{ productD3EQuote.id }} - {{ productD3EQuote.dateCreation|date('d/m/Y H:i:s') }}
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.BusinessName'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.BusinessLine'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.businessLine.name }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.Civility'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.civility }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.LastName'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.lastName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.FirstName'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.Function'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.Email'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EQuote.Phone'|trans }}
        </td>
        <td class="value">
            {{ productD3EQuote.phone }}
        </td>
    </tr>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_productD3EQuote_view", {id: productD3EQuote.id})) }}">
                Consulter le devis
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

