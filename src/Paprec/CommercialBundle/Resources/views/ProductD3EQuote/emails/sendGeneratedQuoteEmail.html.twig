 {% endblock %}#}

{% block title_header %}
    <tr>
        <td style="padding: 60px 80px;" class="mobile-padding">
            <table style="border-collapse:separate !important;" border="0" cellpadding="0"
                   cellspacing="0" width="100%" align="center">
                <tr>
                    <td style="font-size: 2em;">Merci</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em;">pour votre demande de devis</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em; padding-top: 25px;">
                        <button class="btn btn-green">Devis au format PDF</button>
                    </td>
                </tr>
            </table>
    </tr>
{% endblock %}

{#{% block subtitle_header %}
    <button class="btn btn-green">Devis au format PDF</button>
{% endblock %}#}

{% block main_content %}
    <table class="newRequestEmailTable responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%"
           align="center"
           style="max-width: 600px; color: {{ gray1 }};font-size: 1em;">
        <tr style="border-bottom: 1px solid {{ gray2 }};">
            <td style="margin-bottom: 10px; font-size: 1.2em;font-weight: bold;display: block;">
                Détail du devis N° {{ productD3EQuote.id|formatId(6) }}
                - {{ productD3EQuote.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.BusinessName'|trans }} : &nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.businessName }}
            </td>
        </tr>
        <tr>
            <td class="label">
                Contact : &nbsp;
            </td>
            <td class="value">
                {% if productD3EQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productD3EQuote.lastName }} {{ productD3EQuote.firstName }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.Function'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.function }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.Address'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.address }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.PostalCode'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.postalCode }} {{ productD3EQuote.city }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.Email'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.email }}
            </td>
        </tr>
        <tr>
            <td class="label">
                {{ 'Commercial.ProductD3EQuote.Phone'|trans }} :&nbsp;
            </td>
            <td class="value">
                {{ productD3EQuote.phone }}
            </td>
        </tr>
        <tr>
            <td style="margin: 40px 0 30px; font-weight: bold;font-size: 1.2em;">Composition du devis :</td>
        </tr>
    </table>

    <table class="responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%"
           align="center"
           style="max-width: 600px; color: {{ gray1 }};font-size: 1em;">

        <tr style="background-color: {{ gray1 }};">
            <td class="greyrecap" colspan="3">
                <div class="title">
                    {{ 'Public.Cart.ForfaitRecyclage'|trans }}
                </div>
                <div class="info">
                    {{ 'Public.Cart.Including2Lines'|trans|nl2br }}
                </div>
            </td>
        </tr>

        <tr>
            <td>&nbsp;</td>
        </tr>

        <tr style="margin-top: 15px;">
            <td colspan="3">
                <table class="" border="0" cellpadding="0" cellspacing="0" width="100%" align="center"
                       style="max-width: 600px;">

                    <tr>
                        <td>
                            {% for productD3EQuoteLine in productD3EQuote.productD3EQuoteLines %}
                                <table class="footer-demand" border="0" cellpadding="20" cellspacing="0" width="100%"
                                       align="center"
                                       style="max-width: 600px; margin-bottom: 15px !important;">
                                    <tr>
                                        <td style="text-align:center;">
                                            {% if productD3EQuoteLine.productD3E.pictures|length > 0 %}
                                                <img src="{% if productD3EQuoteLine.productD3E.pilotPictures|length > 0 %}{{ absolute_url(asset('/uploads/pictos/' ~ productD3EQuoteLine.productD3E.pilotPictures[0].path)) }}{% endif %}"
                                                     alt="Image produit" width="100" border="0" style="vertical-align: middle;">
                                            {% endif %}
                                        </td>
                                        <td style="padding: 0;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%" align="center">
                                                <tr>
                                                    <td style="font-family: DIN Condensed, Arial, sans-serif;font-size: 30px;text-align: left;">
                                                        {{ productD3EQuoteLine.quantity }} x {{ productD3EQuoteLine.productName }}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="font-weight: normal;text-align: left;">
                                                        de {{ productD3EQuoteLine.categoryName }}
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td>
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%" align="center">
                                                <tr>
                                                    <td align="center" style="color:{{green1}};font-weight: normal;padding-bottom: 20px;">
                                                        PRESTATION PONCTUELLE
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="font-weight: normal;display: inline-flex;">
                                                        À partir de &nbsp;
                                                    </td>
                                                    <td class="value bigger-value" style="display: inline-flex;font-size: 1.3em;">
                                                        {{ productD3EQuoteLine.totalAmount|formatAmount('EUR', app.request.locale) }}
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            {% endfor %}
                        </td>
                    </tr>

                </table>
            </td>
        </tr>

        <tr>
            <td>&nbsp;</td>
        </tr>

        <tr style="border-top: 1px solid {{ gray2 }};">
            <td class="value bigger-value" style="font-weight: normal;padding: 20px 0;">
                Total
            </td>
            <td style="text-align: right; padding-right: 50px;">
                À partir de
                <span class="value bigger-value">
                    &nbsp; {{ productD3EQuote.totalAmount|formatAmount('EUR', app.request.locale) }}</span>
            </td>
        </tr>

    </table>

{% endblock %}

{% block footer %}
    <table class="responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%" align="center"
           style="max-width: 92%;">
        <tr style="padding: 5px">
            <td style="border: 1px solid {{ green1 }}; border-left: 5px solid {{ green1 }};font-size: 1.2em; color: {{ green1 }};font-family: DIN Condensed, Arial, sans-serif;padding: 5px;">
                L’agence en charge de votre demande vous recontactera sous 48h par e-mail ou téléphone afin de valider un devis.
            </td>
        </tr>

    </table>
{% endblock %}

