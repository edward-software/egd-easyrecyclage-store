{% extends "@PaprecCommercial/Common/PDF/base_pdf.html.twig" %}

{% block stylesheet %}
    <style type="text/css">

        .cover {
            position: relative;
            overflow: hidden;
            margin: 0 auto;
            padding: 80px 0;
            width: 810px;
            height: 1250px;
        }

        .pdf-cover-title {
            margin-top: 75px;
            margin-bottom: 95px;
        }

        .pdf-cover-title h1 {
            color: #000000;
            font-size: 68px;
            letter-spacing: 4px;
            font-weight: 300;
        }

        .pdf-cover-title h2 {
            color: #cbebfa;
            font-size: 60px;
            letter-spacing: 4px;
            font-weight: 300;

        }

        .pdf-cover-image {
            position: relative;
            width: 850px;
            margin-top: 50px;
        }

        .blue-bg {
            width: 277px;
            height: 525px;
            background-color: #cbebfa;
            position: absolute;
            top: 0;
            left: 70px;
            z-index: -1;
        }

        .pdf-cover-image img {
            margin-top: 30px;
            width: 685px;
            height: 395px;
            object-fit: cover;
        }

        .pdf-cover-image-infos {
            font-family: 'Knockout';
            color: rgba(0, 0, 0, 0.82);
            letter-spacing: 2px;
            padding: 10px 0 0 360px;
            font-weight: bold;
            width: 780px;
        }

        .pdf-cover-footer {
            padding: 20px 0 0 540px;
            margin-top: 140px;
        }

        .pdf-cover-footer img {
            height: 90px;
            object-fit: cover;
        }
    </style>
{% endblock %}

{% block pdf_content %}
    <div class="cover">
        <div class="pdf-cover-title">
            <h1>Paprec group</h1>
            <h2>Offre commerciale</h2>
        </div>

        <div class="pdf-cover-image">
            <div class="blue-bg"></div>
            <div>
                {% block cover_image %}{% endblock %}
            </div>
            <div class="pdf-cover-image-infos">
                <p style="margin-bottom: 25px;font-size: 32px;">{% block businessName %} {% endblock %}</p>
                <p style="text-transform: uppercase; font-size: 26px; font-weight: 300">Estimation tarifaire de la
                    prestation demandée</p>
                <p style="font-size: 22px; letter-spacing: 2px; font-weight: 300">Affaire suivie par votre agence
                    locale</p>
                <p style="font-weight: normal; letter-spacing: 3px; font-size: 17px">
                    L’agence en charge de votre demande vous<br>
                    recontactera sous 48h par email ou téléphone<br>
                    afin de valider
                    un
                    devis.</p>
            </div>
        </div>

        <div class="pdf-cover-footer">
            <img src="{{ absolute_url(asset('build/static/logo.png')) }}" alt="Logo easy recyclage"
                 style="margin-right: 15px;">
            <img src="{{ absolute_url(asset('build/static/logo-group.png')) }}" alt="Logo easy recyclage">
        </div>
    </div>


{% endblock %}
