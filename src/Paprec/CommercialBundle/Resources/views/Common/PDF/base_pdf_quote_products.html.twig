{% extends "@PaprecCommercial/Common/PDF/base_pdf.html.twig" %}

{% block pdf_content %}
    <table width="780" cellpadding="0" cellspacing="0" align="center"
           style="font-size: 13px; color: #000000 !important;">
        <tr>
            <td style="height: 50px"></td>
        </tr>
        <tr>
            <td style="text-align: center">
                <h1 style="font-family: 'Knockout'; text-transform: uppercase; margin-left: 23%; margin-right: 23%; letter-spacing: 2px; font-weight: 500; border-bottom: 1px solid black; font-size: 36px">
                    Composition de votre estimation</h1>
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0">

                    <tr>
                        <td>
                            <p style="line-height: 15px; margin: 20px; text-align: left; color: #000000; font-family: 'Century';">
                                Vous trouverez ci-dessous la composition de votre estimation tarifaire.
                            </p>
                            <p style="margin: 20px 20px 0 20px;" class="pdf-title bg-blue">
                                L’adresse de la demande de prestation :
                            </p>
                            <p style="font-size: 14px; line-height: 15px; margin: 20px; text-align: left; font-family: 'Century'; text-transform: uppercase;">
                                {% block address %}{% endblock %}
                            </p>
                            <p style="line-height: 15px; margin: 20px; text-align: left; font-family: 'Century';">
                                Un forfait Recyclage comprenant la collecte, le traitement en centre de tri et la mise à
                                disposition du materiel indiqué ci-après :
                            </p>
                            <p style="margin: 20px 20px 0 20px;" class="pdf-title bg-blue">
                                Détail de la prestation demandée* :
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div style="line-height: 15px; margin: 20px; text-align: left;">
                                {% block products %}{% endblock %}
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>

    </table>
{% endblock %}
