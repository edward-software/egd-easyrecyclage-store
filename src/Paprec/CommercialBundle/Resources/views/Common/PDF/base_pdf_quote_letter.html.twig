{% extends "@PaprecCommercial/Common/PDF/base_pdf.html.twig" %}
{% block pdf_content %}
    <table width="780" cellpadding="0" cellspacing="0" align="center" style="font-size: 13px">
        <tr>
            <td height="180" width="100%"
                style="background-repeat: no-repeat;">
                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td width="500"></td>
                        <td width="280" class="pdf-title">
                            <p style="margin: 0;">{% block businessName %}{% endblock %}</p>
                            <p style="margin: 0;">{% block address %}{% endblock %}</p>
                            <p style="margin: 0;">{% block location %}{% endblock %}</p>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <td width="460" class="pdf-title">
                            <p style="line-height: 25px; margin: 20px; text-align: left; text-transform: uppercase;">
                                À l'attention
                                de {% block recipient %}{% endblock %}</p>
                        </td>

                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td height="40" width="100%"
                style="background-repeat: no-repeat;">
                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td width="100%" colspan="2" height="20"></td>
                    </tr>
                    <tr>
                        <td width="600"></td>
                        <td width="330" class="pdf-title">
                            <p style="margin: 0;">Le {% block date %}{% endblock %}</p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td height="100px">
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <td width="100%" colspan="2" height="20"></td>
                    </tr>
                    <tr>
                        <td width="460">
                            <p class="pdf-title bg-blue" style="margin: 20px;" class="pdf-title bg-blue">
                                ESTIMATION N°{% block quoteNumber %}{% endblock %}</p>
                        </td>

                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table width="100%" cellpadding="0" cellspacing="0"
                       class="pdf-default">
                    <tr>
                        <td>
                            {% block letter_text %} {% endblock %}
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>


{% endblock %}


