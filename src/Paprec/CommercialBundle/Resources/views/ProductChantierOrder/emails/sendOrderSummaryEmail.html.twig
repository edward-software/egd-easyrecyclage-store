          border="0" class="picto-header">
 {% endblock %}#}

{% block title_header %}
    <tr>
        <td style="padding: 60px 80px;" class="mobile-padding">
            <table style="border-collapse:separate !important;" border="0" cellpadding="0"
                   cellspacing="0" width="100%" align="center">
                <tr>
                    <td style="font-size: 2em;">Merci</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em;">pour votre commande</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em; padding-top: 25px;">
                        Commande Chantier - N° {{ productChantierOrder.id|formatId(6) }}
                    </td>
                </tr>
            </table>
    </tr>
{% endblock %}

{#{% block subtitle_header %}
    Commande Chantier - N° {{ productChantierOrder.id|formatId(6) }}
{% endblock %}#}

{% block main_content %}
    <table id="mainContentTable" class="responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%"
           align="center"
           style="max-width: 600px; color: {{ gray1 }};font-size: 1em;">
        <tr>
            <td style="padding-bottom: 10px; font-size: 1.2em;font-weight: bold;">
                {% if productChantierOrder.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productChantierOrder.firstName }} {{ productChantierOrder.lastName }}
                ,
            </td>
        </tr>
        <tr>
            <td>
                Nous vous remercions pour votre commande
            </td>
        </tr>
        <tr>
            <td style="padding-bottom: 40px;">
                et de l'intérêt que vous nous portez.
            </td>
        </tr>


        <tr style="border-top: 1px solid {{ gray2 }};">
            <td style="padding: 20px 0 10px;">
                Voici ci-joint le récapitulatif de la commande que vous avez réalisée
                le {{ productChantierOrder.dateCreation|localizeddate('full', 'none', app.request.locale) }}.
            </td>
        </tr>

        <tr>
            <td>
                Cordialement
            </td>
        </tr>
        <tr>
            <td style="font-weight: bold;">
                L'équipe Paprec - EasyRecyclage
            </td>
        </tr>
        <tr>
            <td style="padding-bottom: 40px;">
                <a href="www.easyrecyclage.com">www.easyrecyclage.com</a>
            </td>
        </tr>
        <tr>
            <td>
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td>
                            <a href="{{ paprec_public_site_url }}/catalogue" target="_blank">
                                <button class="btn btn-green" style="margin: 0 10px 10px;">Découvrez nos équipements</button>
                            </a>
                            <a href="{{ paprec_public_site_url }}/store-locator" target="_blank">
                                <button class="btn btn-blue" style="margin: 0 10px 10px;">Trouvez une agence</button>
                            </a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}

