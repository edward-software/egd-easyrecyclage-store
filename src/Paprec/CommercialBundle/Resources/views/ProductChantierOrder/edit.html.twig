{% block javascripts %}

    <script>
        $(function () {

            $('.commercial-productChantierOrder-save-button').on('click', function () {

                $('#commercialProductChantierOrderForm').submit();

            });


            $('.commercial-productChantierOrder-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_productChantierOrder_view", {id: productChantierOrder.id}) }}";

                Swal({
                    title: "{{ 'General.Confirm'|trans }}",
                    text: "{{ 'Commercial.ProductChantierOrder.Confirm-cancel'|trans }}",
                    showCancelButton: true,
                    confirmButtonText: "{{ 'General.Yes'|trans }}",
                    cancelButtonText: "{{ 'General.No'|trans }}"
                }).then((result) => {
                    if (result.value) {
                        $(location).attr('href', url);
                    }
                });

            });

        });
    </script>
