{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="100px" height="100px" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO
     </a>
 {% endblock %}

{% block title_header %}
    Nouveau devis pour déchets de chantier
{% endblock %}

{% block subtitle_header %}
    Devis Chantier - N° {{ productChantierQuote.id }}
{% endblock %}

{% block main_content %}
    <tr>
        Détail de la demande N° {{ productChantierQuote.id }} - {{ productChantierQuote.dateCreation|date('d/m/Y H:i:s') }}
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.BusinessName'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.BusinessLine'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.businessLine.name }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Civility'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.civility }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.LastName'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.lastName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.FirstName'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Function'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Email'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Phone'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.phone }}
        </td>
    </tr>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_productChantierQuote_view", {id: productChantierQuote.id})) }}">
                Consulter le devis
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

