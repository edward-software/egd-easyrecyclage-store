{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <a href="{{ paprec_public_site_url }}" target="_blank">
         {#<img alt="Logo" src="{{ absolute_url('build/static/logo.png') }}"  width="100px" height="100px" style="display: block; font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">#}
         LOGO
     </a>
 {% endblock %}

{% block title_header %}
    Un nouveau devis vient d'être établi
{% endblock %}

{% block subtitle_header %}
    Devis Ponctuel - Mes déchets d'entreprise - N° {{ productChantierQuote.id }}
{% endblock %}

{% block main_content %}
    <tr>
        Détail du devis N° {{ productChantierQuote.id }} - {{ productChantierQuote.dateCreation|date('d/m/Y H:i:s') }}
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.BusinessName'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            Contact
        </td>
        <td class="value">
            {% if productChantierQuote.civility == 'M' %}Monsieur{% else %}Madame{% endif %} {{ productChantierQuote.lastName }} {{ productChantierQuote.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Function'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Address'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.address }}<br>
            {{ productChantierQuote.postalCode }} {{ productChantierQuote.city }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Email'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductChantierQuote.Phone'|trans }}
        </td>
        <td class="value">
            {{ productChantierQuote.phone }}
        </td>
    </tr>
    {% for productChantierQuoteLine in productChantierQuote.productChantierQuoteLines %}
        <tr>
            <td class="picto">
                {% if productChantierQuoteLine.productDI.pictures|length > 0 %}
                    <img src="{% if productChantierQuoteLine.productDI.pilotPictures|length > 0 %}{{ absolute_url('/uploads/pictos/' ~ productChantierQuoteLine.productDI.pilotPictures[0].path) }}{% endif %}"
                         alt="#">
                {% endif %}
            </td>
            <td class="product">
                {{ productChantierQuoteLine.quantity }} x {{ productChantierQuoteLine.productName }}<br>
                de {{ productChantierQuoteLine.categoryName }}
            </td>
            <td class="price">
                à partir de {{ productChantierQuoteLine.totalAmount|formatAmount('EUR', app.request.locale) }}
            </td>
        </tr>
    {% endfor %}
    <tr>
        <td></td>
        <td>
            TOTAL
        </td>
        <td>
            à partir de {{ productChantierQuote.totalAmount|formatAmount('EUR', app.request.locale) }}
        </td>
    </tr>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h et d'importer le devis actualisé
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_productChantierQuote_view", {id: productChantierQuote.id})) }}">
                Lien pour voir le devis et y importer le nouveau devis
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

