{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.ProductDIOrder.View'|trans }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-bs/css/dataTables.bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css"
          href="{{ asset('/assets/vendor/datatables.net-select-bs/css/select.bootstrap.min.css') }}">
{% endblock %}

{% block content_title %}
    {{ 'Commercial.ProductDIOrder.Users'|trans }}
{% endblock %}

{% block main_content %}


    <div class="col-md-12">
        <!-- FLASH MESSAGE -->
        <div class="view-box">

            {% for flashMessage in app.session.flashbag.get('errors') %}
                <div class="alert alert-danger">{{ ('Commercial.ProductDIOrder.Error.' ~ flashMessage)|trans }}</div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">{{ ('Commercial.ProductDIOrder.Success.' ~ flashMessage)|trans }}</div>
            {% endfor %}
        </div>
        <!-- CARD -->
        <div class="card">
            <div class="card-header">
                <h4>
                    <i class="fa fa-productDIOrder"></i> {{ 'Commercial.ProductDIOrder.View'|trans }}
                    <div class="float-right">
                        <a href="{{ path("paprec_commercial_productDIOrder_edit", {id: productDIOrder.id}) }}" class="btn btn-warning"><i
                                    class="fa fa-edit"></i> {{ 'Commercial.ProductDIOrder.Edit'|trans }}</a>
                        <a id="commmecialProductDIOrderRemoveButton_" href="javascript:void(0);" class="btn btn-danger"><i
                                    class="fa fa-trash"></i> {{ 'Commercial.ProductDIOrder.Remove'|trans }}</a>
                    </div>
                </h4>
                <div class="view-tools float-left">
                    <a href="{{ path('paprec_commercial_productDIOrder_index') }}" class="btn btn-default"><i
                                class="fa fa-chevron-left"></i> {{ 'Commercial.ProductDIOrder.List'|trans }}</a>
                </div>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.ProductDIOrder.Informations'|trans }}</h5>
                        </div>
                        <div class="card-body row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.BusinessName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.businessName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.BusinessLine'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.businessLine }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Civility'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.civility }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.LastName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.lastName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.FirstName'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.firstName }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Email'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.email }}
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Address'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.address }}
                                    </label>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.PostalCode'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.postalCode }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.City'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.city }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Phone'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.phone }}
                                    </label>
                                </div>
                                <div class="form-group row">
                                    <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.OrderStatus'|trans }}</label>
                                    <label class="col-form-label">
                                        {{ productDIOrder.offerStatus }}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">{{ 'Commercial.ProductDIOrder.System-informations'|trans }}</h5>
                        </div>
                        <div class="card-body">

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Date-creation'|trans }}</label>
                                <label class="col-form-label">
                                    {{ productDIOrder.dateCreation|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>

                            <div class="form-group row">
                                <label class="col-md-4 col-form-label">{{ 'Commercial.ProductDIOrder.Date-update'|trans }}</label>
                                <label class="col-form-label">
                                    {{ productDIOrder.dateUpdate is empty ? "" : productDIOrder.dateUpdate|localizeddate('short', 'medium', app.request.locale) }}
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

        {% block javascripts %}

            <script>
                $(function () {

                    $('#commmecialProductDIOrderRemoveButton_').on('click', function () {

                        var url = "{{ path("paprec_commercial_productDIOrder_remove", {id: productDIOrder.id}) }}";

                        bootbox.confirm("{{ 'Commercial.ProductDIOrder.Confirm-remove'|trans }}", function (result) {
                            if (result === true) {
                                $(location).attr('href', url);
                            }
                        });

                    });

                });
            </script>
        {% endblock %}
