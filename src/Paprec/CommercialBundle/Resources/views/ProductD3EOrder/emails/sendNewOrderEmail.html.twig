{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

{# {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/check.svg')) }}" width="60px" height="60px"
          border="0" class="picto-header">
 {% endblock %}#}

{% block title_header %}
    <tr>
        <td style="padding: 60px 80px;" class="mobile-padding">
            <table class="new-demand" style="border-collapse:separate !important;" border="0" cellpadding="0"
                   cellspacing="0" width="100%" align="center">
                <tr>
                    <td align="center" style="padding-bottom: 10px;">
                        <div class="bullet">
                            <p style="text-align: center; margin: 0;">1</p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em;">Vous avez une</td>
                </tr>
                <tr>
                    <td style="font-size: 2em;">nouvelle commande</td>
                </tr>
                <tr>
                    <td style="font-size: 1.2em; padding-top: 25px;">
                        Commande D3E - N° {{ productD3EOrder.id|formatId(6) }}
                    </td>
                </tr>
            </table>
    </tr>
{% endblock %}

{#{% block subtitle_header %}
    Commande D3E - N° {{ productD3EOrder.id|formatId(6) }}
{% endblock %}#}

{% block main_content %}
    <table class="newRequestEmailTable responsive-table" border="0" cellpadding="0" cellspacing="0" width="100%"
           align="center"
           style="max-width: 600px; color: {{ gray1 }};font-size: 1em;">
        <tr style="border-bottom: 1px solid {{ gray2 }};">
            <td style="margin-bottom: 10px; font-size: 1.2em;font-weight: bold;display: block;">
        Détail de la commande N° {{ productD3EOrder.id|formatId(6) }} - {{ productD3EOrder.dateCreation|date('d/m/Y H:i:s') }}
        </td>
    </tr>
    <tr>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.BusinessName'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.businessName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.BusinessLine'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.businessLine.name }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.Civility'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.civility }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.LastName'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.lastName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.FirstName'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.firstName }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.Function'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.function }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.Email'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.email }}
        </td>
    </tr>
    <tr>
        <td class="label">
            {{ 'Commercial.ProductD3EOrder.Phone'|trans }} :&nbsp;
        </td>
        <td class="value">
            {{ productD3EOrder.phone }}
        </td>
    </tr>
</table>
{% endblock %}

{% block footer %}
    <tr>
        <td style="padding-bottom: 25px;" align="center">
            <a href="{{ absolute_url(path("paprec_commercial_productD3EOrder_view", {id: productD3EOrder.id})) }}">
                <button class="btn btn-green" style="margin-top: 15px;">
                    Consulter la commande
                </button>
            </a>
        </td>
    </tr>
{% endblock %}

