{% extends "@PaprecCommercial/Common/emails/base_email.html.twig" %}

 {% block picto_header %}
     <img alt="Logo" src="{{ absolute_url(asset('build/static/new_mail.png')) }}" width="75px" height="75px"
          style="font-family: Helvetica, Arial, sans-serif; color: #ffffff; font-size: 16px;" border="0">
 {% endblock %}

{% block title_header %}
    Vous avez une nouvelle demande
{% endblock %}

{% block subtitle_header %}
    Formulaire {{ quoteRequestNonCorporate.customerType }} - N° {{ quoteRequestNonCorporate.id|formatId(6) }}
{% endblock %}

{% block main_content %}
    <table class="newRequestEmailTable" border="0" cellpadding="0" cellspacing="0" width="80%"
           style="margin-left: 10%; margin-bottom: 15px; margin-top: 20px;">
        <tr style="border-bottom: 1px solid rgba(0, 0, 0, 0.6);">
            <td>
                Détail de la demande N° {{ quoteRequestNonCorporate.id|formatId(6) }}
                - {{ quoteRequestNonCorporate.dateCreation|date('d/m/Y H:i') }}
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        {% if quoteRequestNonCorporate.businessName %}
            <tr>
                <td>
                    <div class="label">
                        {{ 'Commercial.QuoteRequestNonCorporate.BusinessName'|trans }} :&nbsp;
                    </div>
                    <div class="value">
                        {{ quoteRequestNonCorporate.businessName }}
                    </div>
                </td>
            </tr>
        {% endif %}
        {% if quoteRequestNonCorporate.locationsNumber %}
            <tr>
                <td>
                    <div class="label">
                        {{ 'Commercial.QuoteRequestNonCorporate.LocationsNumber'|trans }} :&nbsp;
                    </div>
                    <div class="value">
                        {{ quoteRequestNonCorporate.locationsNumber }}
                    </div>
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>
        {% endif %}
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.Civility'|trans }} : &nbsp;
                </div>
                <div class="value">
                    {% if quoteRequestNonCorporate.civility == 'M' %}Monsieur{% else %}Madame{% endif %}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.LastName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.lastName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.FirstName'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.firstName }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.PostalCode'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.postalCode }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.Email'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.email }}
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.Phone'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.phone }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.Need'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {{ quoteRequestNonCorporate.need }}
                </div>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
                <div class="label">
                    {{ 'Commercial.QuoteRequestNonCorporate.AttachedFiles'|trans }} :&nbsp;
                </div>
                <div class="value">
                    {% if quoteRequestNonCorporate.attachedFiles %}
                        <a href="{{ absolute_url(path('paprec_commercial_quoteRequestNonCorporate_downloadAttachedFiles', {id: quoteRequestNonCorporate.id})) }}">Pièces
                            jointes</a>
                    {% endif %}
                </div>
            </td>
        </tr>
    </table>
{% endblock %}

{% block footer %}
    <tr>
        <td>
            Merci de répondre à cette demande sous 48h.
        </td>
    </tr>
    <tr>
        <td>
            <a href="{{ absolute_url(path("paprec_commercial_quoteRequestNonCorporate_edit", {id: quoteRequestNonCorporate.id})) }}">
                <button class="btn btn-green" style="margin: 5px 0px 15px 0px;">
                    Mettre à jour le statut
                </button>
            </a>
        </td>
    </tr>
{% endblock %}

{% block sub_footer %}
    <tr>
        <td>
            Cet email est un message automatique
        </td>
    </tr>
{% endblock %}

