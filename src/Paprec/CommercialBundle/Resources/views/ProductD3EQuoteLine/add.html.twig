{% extends "::base_admin.html.twig" %}

{% block title %}
    {{ 'Commercial.ProductD3EQuote.Add'|trans }}
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block content_title %}
    {{ 'Commercial.ProductD3EQuote.ProductD3EQuotes'|trans }}
{% endblock %}

{% block main_content %}

    <form id="commercialProductD3EQuoteForm" action="" method="post" enctype="multipart/form-data">
        <input type="hidden" id="submitFormInput" name="submitForm" value="">
        <input type="hidden" id="selectedProductInput" name="selectedProductId" value="">

        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-plus"></i> {{ 'Commercial.ProductD3EQuote.AddLine'|trans }}
                        <div class="float-right">
                            <a href="javascript:void(0);" class="btn btn-sm btn-success commercial-productD3EQuoteLine-save-button"><i
                                        class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductD3EQuote.Save'|trans }}</a>
                            <a href="javascript:void(0);" class="btn btn-sm btn-danger commercial-productD3EQuoteLine-cancel-button"><i
                                        class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductD3EQuote.Cancel'|trans }}</a>
                        </div>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title">{{ 'Commercial.ProductD3EQuote.Informations'|trans }}</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductD3EQuoteLine.ProductName'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.productD3E, {'attr': {'class': 'form-control select-product'}}) }}
                                        {{ form_errors(form.productD3E) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">{{ 'Commercial.ProductD3EQuoteLine.Quantity'|trans }}</label>
                                    <div class="form-content">
                                        {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.quantity) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="float-right">
                        <a href="javascript:void(0);" class="btn btn-sm btn-success commercial-productD3EQuoteLine-save-button"><i
                                    class="fa fa-xs fa-check"></i> {{ 'Commercial.ProductD3EQuote.Save'|trans }}</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger commercial-productD3EQuoteLine-cancel-button"><i
                                    class="fa fa-xs fa-close"></i> {{ 'Commercial.ProductD3EQuote.Cancel'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    </div>



{% endblock %}

{% block javascripts %}

    <script>
        $(function () {

            $('.commercial-productD3EQuoteLine-save-button').on('click', function () {
                $('#commercialProductD3EQuoteForm').submit();
            });


            $('.commercial-productD3EQuoteLine-cancel-button').on('click', function () {

                var url = "{{ path("paprec_commercial_productD3EQuote_view", { id: productD3EQuote.id }) }}";

                bootbox.confirm("{{ 'Commercial.ProductD3EQuote.Confirm-cancel'|trans }}", function (result) {
                    if (result === true) {
                        $(location).attr('href', url);
                    }
                });

            });
        });
    </script>
{% endblock %}